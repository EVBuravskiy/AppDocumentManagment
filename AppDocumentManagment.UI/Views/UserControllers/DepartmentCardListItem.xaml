<UserControl x:Class="AppDocumentManagment.UI.Views.UserControllers.DepartmentCardListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppDocumentManagment.UI.Views.UserControllers"
             mc:Ignorable="d">
    <Grid>
        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="300"
                Padding="10"
                Margin="0 0 15 0"
                CornerRadius="5"
                BorderThickness="1"
                BorderBrush="DarkViolet"
                Background="LightCyan">
            <StackPanel Orientation="Horizontal">
                <Label FontFamily="Arial"
                       FontSize="12"
                       FontWeight="Bold"
                       Content="{Binding DepartmentTitle}"
                       HorizontalAlignment="Right" 
                       VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
