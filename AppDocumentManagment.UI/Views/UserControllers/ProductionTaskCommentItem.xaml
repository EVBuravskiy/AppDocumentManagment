<UserControl x:Class="AppDocumentManagment.UI.Views.UserControllers.ProductionTaskCommentItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppDocumentManagment.UI.Views.UserControllers"
             mc:Ignorable="d">
    <Border Background="WhiteSmoke"
            Margin="10"
            CornerRadius="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0"
                        BorderThickness="2"
                        BorderBrush="DimGray"
                        CornerRadius="2"
                        Margin=" 0 5"
                        Width="50">
                    <Image Width="50"
                           Height="50"
                           Source="{Binding DeputyGeneralDirector.EmployeePhoto.FilePath,
                        FallbackValue={StaticResource DefaultContactImage},
                        TargetNullValue={StaticResource DefaultContactImage}}"
                           Stretch="UniformToFill"/>
                </Border>
                <StackPanel Orientation="Vertical"
                            Grid.Column="1"
                            Margin="0 5"
                            HorizontalAlignment="Center">
                    <TextBlock Text="{Binding Employee.Position}"
                               Style="{StaticResource AdminDocumentTextblock}"/>
                    <TextBlock Text="{Binding Employee.EmployeeFullName}"
                               Style="{StaticResource AdminDocumentTextblock}"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <TextBlock Margin="10"
                           TextWrapping="Wrap"
                           Style="{StaticResource AdminDocumentTextblock}"
                           Text="{Binding ProductionTaskCommentText}"/>
            </Grid>
            <Grid Grid.Row="2">
                <TextBlock HorizontalAlignment="Right"
                           Margin="0 0 20 0"
                           Style="{StaticResource AdminDocumentTextblock}"
                           Text="{Binding ProductionTaskCommentDate}"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
