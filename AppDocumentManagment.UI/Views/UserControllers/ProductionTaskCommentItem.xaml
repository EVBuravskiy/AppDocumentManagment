<UserControl x:Class="AppDocumentManagment.UI.Views.UserControllers.ProductionTaskCommentItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppDocumentManagment.UI.Views.UserControllers"
             mc:Ignorable="d">
    <Border Background="WhiteSmoke"
            Margin="10"
            CornerRadius="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0"
                    BorderThickness="2"
                    BorderBrush="DimGray"
                    CornerRadius="2"
                    Margin=" 0 5"
                    Width="55"
                    Height="55">
                <Image Width="55"
                           Height="55"
                           Source="{Binding Employee.EmployeePhoto.FilePath,
                        FallbackValue={StaticResource DefaultContactImage},
                        TargetNullValue={StaticResource DefaultContactImage}}"
                           Stretch="UniformToFill"/>
            </Border>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Vertical"
                            Grid.Row="0"
                            Margin="0 5"
                            HorizontalAlignment="Center">
                    <TextBlock Text="{Binding Employee.Position}"
                               TextAlignment="Left"
                               Style="{StaticResource AdminDocumentTextblock}"/>
                    <TextBlock Text="{Binding Employee.EmployeeFullName}"
                               TextAlignment="Left"
                               Style="{StaticResource AdminDocumentTextblock}"/>
                </StackPanel>
                <Grid Grid.Row="1">
                    <TextBlock Margin="10"
                               TextWrapping="Wrap"
                               Style="{StaticResource AdminDocumentTextblock}"
                               TextAlignment="Justify"
                               Text="{Binding ProductionTaskCommentText}"/>
                </Grid>
                <Grid Grid.Row="2">
                    <TextBlock HorizontalAlignment="Right"
                               Margin="0 0 20 0"
                               Style="{StaticResource AdminDocumentTextblock}"
                               Text="{Binding ProductionTaskCommentDate, Converter={StaticResource DateConverter}}"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>
