<UserControl x:Class="AppDocumentManagment.UI.Views.UserControllers.EmployeeCardListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppDocumentManagment.UI.Views.UserControllers"
             mc:Ignorable="d">
    <Grid>
        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="10"
                Margin="0 0 0 0"
                Width="300"
                CornerRadius="5"
                BorderThickness="1"
                BorderBrush="DarkViolet"
                Background="LightCyan">
            <Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0"
                            BorderBrush="DimGray"
                            BorderThickness="5"
                            CornerRadius="5">
                        <Image Width="100"
                           Height="100"
                           Source="{Binding EmployeeImagePath,
                        FallbackValue={StaticResource DefaultContactImage},
                        TargetNullValue={StaticResource DefaultContactImage}}"
                           Stretch="UniformToFill"/>
                    </Border>
                    <StackPanel Orientation="Vertical" 
                                Grid.Column="1">
                        <TextBlock FontFamily="Arial"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Text="{Binding Department.DepartmentTitle}"/>
                        <TextBlock Grid.Row="1"
                                   Padding="10, 0"
                                   FontFamily="Arial"
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   Text="{Binding Position}"/>
                        <Label Margin="0 20 0 5"
                               Padding="10, 0"
                               FontFamily="Arial"
                               FontSize="22"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Content="{Binding EmployeeLastName}"/>
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center">
                            <TextBlock Padding="10, 0"
                                       FontFamily="Arial"
                                       FontSize="14"
                                       Text="{Binding EmployeeFirstName}"/>
                            <TextBlock Padding="10, 0"
                                       FontFamily="Arial"
                                       FontSize="14"
                                       Text="{Binding EmployeeMiddleName}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
