<UserControl x:Class="AppDocumentManagment.UI.Views.UserControllers.ProductionTaskItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppDocumentManagment.UI.Views.UserControllers"
             mc:Ignorable="d" 
             d:DesignHeight="240" d:DesignWidth="320">
    <Grid>
        <Border Background="WhiteSmoke"
                BorderBrush="Gray"
                BorderThickness="3"
                CornerRadius="5"
                Margin="0 10">
            <Button Padding="0" Margin="0" BorderThickness="0" 
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           FontFamily="Impact"
                           Text="TaskTitle"
                           VerticalAlignment="Center"
                           Padding="20 0"/>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               FontFamily="Impact"
                               Text="Статус:"
                               VerticalAlignment="Center"
                               Padding="20 0"/>
                    <TextBlock Grid.Column="1"
                               FontFamily="Impact"
                               Text="Статус задачи"
                               VerticalAlignment="Center"
                               Padding="20 0"/>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="Срок:"
                               FontFamily="Impact"
                               VerticalAlignment="Center"
                               Padding="20 0"/>
                    <TextBlock Grid.Column="1"
                               FontFamily="Impact"
                               Text="20/01/2025"
                               VerticalAlignment="Center"
                               Padding="20 0"/>
                    <TextBlock Grid.Column="3"
                               Text="СРОЧНО!!!"
                               FontFamily="Impact"
                               Foreground="DarkRed"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               Padding="20 0"/>
                    </Grid>
                <Grid Grid.Row="3">
                    <TextBlock Text="Исполнители"
                               FontFamily="Impact"
                               VerticalAlignment="Center"
                               Padding="20 0"/>
                </Grid>
                <Grid Grid.Row="4">
                    <ListView Padding="20 10">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                        <Border Grid.Column="0" 
                                                BorderBrush="DimGray"
                                                BorderThickness="2"
                                                CornerRadius="2">
                                            <Image Width="40"
                                                   Height="40"
                                                   Source="{Binding EmployeePhoto.FilePath,
                                                FallbackValue={StaticResource DefaultContactImage},
                                                TargetNullValue={StaticResource DefaultContactImage}}"
                                                   Stretch="UniformToFill"/>
                                        </Border>
                                        <Grid Grid.Column="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="280"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Grid.Row="1"
                                                           Padding="10, 0"
                                                           FontFamily="Impact"
                                                           FontSize="12"
                                                           HorizontalAlignment="Left"
                                                           Text="Должность: "/>
                                                <TextBlock Padding="10, 0"
                                                           FontFamily="Impact"
                                                           FontSize="14"
                                                           HorizontalAlignment="Left"
                                                           Text="Фамилия, имя, отчество"/>
                                                <TextBlock Margin="0 5 0 0"
                                                           Padding="10, 0"
                                                           FontFamily="Impact"
                                                           FontSize="12"
                                                           HorizontalAlignment="Left"
                                                           Text="Контактный телефон: "/>
                                                <TextBlock Padding="10, 0"
                                                           FontFamily="Impact"
                                                           FontSize="12"
                                                           HorizontalAlignment="Left"
                                                           Text="Адрес электронной почты: "/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Grid.Row="1"
                                                           Padding="10, 0"
                                                           FontFamily="Impact"
                                                           FontSize="12"
                                                           HorizontalAlignment="Left"
                                                           Text="{Binding Position}"/>
                                                <TextBlock Padding="10, 0"
                                                           FontFamily="Impact"
                                                           FontSize="14"
                                                           FontWeight="Bold"
                                                           HorizontalAlignment="Left"
                                                           Text="{Binding EmployeeFullName}"/>
                                                <TextBlock Margin="0 5 0 0"
                                                           Padding="10, 0"
                                                           FontFamily="Impact"
                                                           FontSize="12"
                                                           HorizontalAlignment="Left"
                                                           Text="{Binding EmployeePhone}"/>
                                                <TextBlock Padding="10, 0"
                                                           FontFamily="Impact"
                                                           FontSize="12"
                                                           HorizontalAlignment="Left"
                                                           Text="{Binding EmployeeEmail}"/>
                                            </StackPanel>
                                        </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Grid>
            </Button>
        </Border>
    </Grid>
</UserControl>
