<Window x:Class="AppDocumentManagment.UI.Views.ContractorCompanyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppDocumentManagment.UI.Views"
        mc:Ignorable="d"
        Title="АИС Документооборот"  
        Height="900"
        Width="600"
        Icon="/Resources/Images/AppIcon.png" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0.778"/>
                <GradientStop Color="White" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="60px"/>
            <RowDefinition Height="240px"/>
            <RowDefinition Height="240px"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60px"/>
            <RowDefinition Height="60px"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF7D00FF" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Label Grid.Row="0" 
                   x:Name="GreetingLabel"
                   Content="Панель редактирования данных контрагента" 
                   HorizontalAlignment="Left" 
                   Padding="20,0"
                   Style="{StaticResource TopPanelLabel}"
                   Foreground="WhiteSmoke"/>
            <Button x:Name="ExitBtn"
                    Content="Выйти"
                    HorizontalAlignment="Right"
                    Style="{StaticResource Buttons}"
                    Margin="10, 5"
                    Padding="10, 0"
                    Command="{Binding IExit}"/>
        </Grid>
        <Grid Grid.Row="1">
            <StackPanel Orientation="Vertical">
                <Label Content="Информация о контрагенте"
                       Style="{StaticResource TopPanelLabel}"
                       Foreground="Black"
                       FontSize="16"
                       Margin="20 10 20 0"/>
                <Grid>
                    <TextBox x:Name="ContractorCompanyTitle" 
                             Style="{StaticResource ItemTitleBox}"
                             VerticalAlignment="Top"
                             FontSize="14"
                             Text="{Binding ContractorCompanyTitle}"
                             Background="WhiteSmoke"
                             SpellCheck.IsEnabled="True"
                             Height="80"
                             ToolTip="Введите полное наименование контрагента. Наименование может содержать буквы, цифры, дефис"
                             />
                    <Label IsHitTestVisible="False" 
                           Foreground="DimGray"
                           Content="Введите полное наименование контрагента..."
                           VerticalAlignment="Top"
                           VerticalContentAlignment="Center"
                           FontSize="14"
                           Visibility="{Binding Text.IsEmpty, ElementName=ContractorCompanyTitle, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="30 10"
                           Height="80"/>
                </Grid>
                <Grid>
                    <TextBox x:Name="ContractorCompanyShortTitle" 
                             Style="{StaticResource ItemTitleBox}"
                             VerticalAlignment="Top"
                             FontSize="14"
                             Text="{Binding ContractorCompanyShortTitle}"
                             Background="WhiteSmoke"
                             SpellCheck.IsEnabled="True"/>
                    <Label IsHitTestVisible="False" 
                           Foreground="DimGray"
                           Content="Введите сокращенное наименование контрагента..."
                           VerticalAlignment="Top"
                           FontSize="14"
                           Visibility="{Binding Text.IsEmpty, ElementName=ContractorCompanyShortTitle, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="30 10"
                           ToolTip="Введите сокращенное наименование контрагента. Наименование может содержать буквы, цифры, дефис"
                           />
                </Grid>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2">
            <StackPanel>
                <Label Content="Контактная информация"
                       Style="{StaticResource TopPanelLabel}"
                       FontSize="16"
                       Margin="20 0"/>
                <Grid>
                    <TextBox x:Name="ContractorCompanyAddress" 
                             Style="{StaticResource ItemTitleBox}"
                             VerticalAlignment="Top"
                             FontSize="14"
                             Text="{Binding ContractorCompanyAddress}"
                             Background="WhiteSmoke"
                             SpellCheck.IsEnabled="True"
                             Height="80"
                             TextWrapping="Wrap"
                             VerticalContentAlignment="Top"/>
                    <Label IsHitTestVisible="False" 
                           Foreground="DimGray"
                           Content="Введите адрес контрагента..."
                           VerticalAlignment="Top"
                           VerticalContentAlignment="Center"
                           FontSize="14"
                           Height="80"
                           Visibility="{Binding Text.IsEmpty, ElementName=ContractorCompanyAddress, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="30 10"
                           ToolTip="Введите адрес контрагента. Адрес может содержать буквы, цифры(индекс), дефис, косую линию"
                           />
                </Grid>
                <Grid>
                    <TextBox x:Name="ContractorCompanyPhone" 
                             Style="{StaticResource ItemTitleBox}"
                             VerticalAlignment="Top"
                             FontSize="14"
                             Text="{Binding ContractorCompanyPhone}"
                             Background="WhiteSmoke"
                             SpellCheck.IsEnabled="True"/>
                    <Label IsHitTestVisible="False" 
                           Foreground="DimGray"
                           Content="Введите контактный телефон контрагента..."
                           VerticalAlignment="Top"
                           FontSize="14"
                           Visibility="{Binding Text.IsEmpty, ElementName=ContractorCompanyPhone, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="30 10"
                           ToolTip="Введите контактный телефон контрагента. Телефон контрагента должен содержать 11 цифр"
                           />
                </Grid>
                <Grid>
                    <TextBox x:Name="ContractorCompanyEmail" 
                             Style="{StaticResource ItemTitleBox}"
                             VerticalAlignment="Top"
                             FontSize="14"
                             Text="{Binding ContractorCompanyEmail}"
                             Background="WhiteSmoke"
                             SpellCheck.IsEnabled="True"/>
                    <Label IsHitTestVisible="False" 
                           Foreground="DimGray"
                           Content="Введите адрес электронной почты контрагента..."
                           VerticalAlignment="Top"
                           FontSize="14"
                           Visibility="{Binding Text.IsEmpty, ElementName=ContractorCompanyEmail, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="30 10"
                           ToolTip="Введите адрес электронной почты контрагента. Адрес электронной почты может содержать буквы латинского алфавита, цифры, тире, нижнее подчеркивание"
                           />
                </Grid>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="3">
            <TextBox x:Name="ContractorCompanyInfo" 
                     Grid.Row="1"
                     Style="{StaticResource ItemTitleBox}"
                     VerticalAlignment="Top"
                     FontSize="14"
                     Text="{Binding ContractorCompanyInfo}"
                     Background="WhiteSmoke"
                     SpellCheck.IsEnabled="True"
                     Height="200"/>
            <Label IsHitTestVisible="False" 
                   Grid.Row="1"
                   Foreground="DimGray"
                   Content="Введите дополнительную необходимую информацию о контрагенте..."
                   VerticalAlignment="Top"
                   FontSize="14"
                   Visibility="{Binding Text.IsEmpty, ElementName=ContractorCompanyInfo, Converter={StaticResource BooleanToVisibilityConverter}}"
                   Margin="30 10"
                   VerticalContentAlignment="Center"
                   Height="200"/>
        </Grid>
        <Grid Grid.Row="4">
            <Button Content="Удалить контрагента" 
                    HorizontalAlignment="Left"
                    Style="{StaticResource Buttons}"
                    Padding="10 5"
                    Margin="20 5"
                    FontFamily="Arial" 
                    FontSize="14"
                    FontWeight="Bold"
                    Command="{Binding IRemoveContractorCompany}"/>
            <Button Content="Сохранить изменения" 
                    HorizontalAlignment="Right"
                    Style="{StaticResource Buttons}"
                    Padding="10, 5"
                    Margin="20 5"
                    FontFamily="Arial" 
                    FontSize="14"
                    FontWeight="DemiBold"
                    Command="{Binding ISaveContractorCompany}"/>
        </Grid>
    </Grid>
</Window>
