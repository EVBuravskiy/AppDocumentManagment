<Window x:Class="AppDocumentManagment.UI.Views.UserRegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppDocumentManagment.UI.Views"
        mc:Ignorable="d"
        Title="АИС Документооборот"  
        MinHeight="450" 
        MinWidth="1000" 
        Height="800"
        Width="1200"
        Icon="/Resources/Images/AppIcon.png" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40px"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40px"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF7D00FF" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Label x:Name="GreetingLabel"
                   Content="Панель регистрации пользователей" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Center" 
                   FontFamily="Arial" 
                   FontSize="14" 
                   FontWeight="Bold"
                   Padding="20,0"
                   Foreground="WhiteSmoke"/>
            <Label x:Name="CurrentUserName" 
                   Content="Сотрудник"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   FontFamily="Arial" 
                   FontSize="14" 
                   FontWeight="Bold"
                   Margin="200, 0"
                   Foreground="WhiteSmoke"/>
            <Button x:Name="BackBtn"
                    Content="  Назад  "
                    HorizontalAlignment="Right"
                    Style="{StaticResource Buttons}"
                    FontFamily="Arial" 
                    FontSize="14" 
                    Margin="90, 5"
                    Padding="10, 0"
                    FontWeight="Bold"
                    Command="{Binding IBack}"/>
            <Button x:Name="ExitBtn"
                    Content="Выйти"
                    HorizontalAlignment="Right"
                    Style="{StaticResource Buttons}"
                    FontFamily="Arial" 
                    FontSize="14" 
                    Margin="10, 5"
                    Padding="10, 0"
                    FontWeight="Bold"
                    Command="{Binding IExit}"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="1"/>
                        <GradientStop Color="#FF7F00FF" Offset="0"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="75"/>
                    <RowDefinition Height="75"/>
                    <RowDefinition Height="75"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Grid.Row="0" 
                        x:Name="NewUserRegistredBtn"
                        Style="{StaticResource Buttons}"
                        FontFamily="Arial" 
                        FontSize="14" 
                        FontWeight="Bold"
                        Padding="10"
                        Margin="10"
                        Command="{Binding IGetRegistratedUsersList}">
                    <TextBlock TextAlignment="Center"> Зарегистрированные <LineBreak/> сотрудники</TextBlock>
                </Button>
                <Button Grid.Row="1"
                        x:Name="AddEmployeeToDepartment"
                        Style="{StaticResource Buttons}"
                        FontFamily="Arial" 
                        FontSize="14" 
                        FontWeight="Bold"
                        Padding="10"
                        Margin="10"
                        Command="{Binding IGetNotRegistratedUsersList}">
                    <TextBlock TextAlignment="Center"> Незарегистрированные <LineBreak/> сотрудники</TextBlock>
                </Button>
                <Button Grid.Row="2"
                        Style="{StaticResource Buttons}"
                        FontFamily="Arial" 
                        FontSize="14" 
                        FontWeight="Bold"
                        Padding="10"
                        Margin="10"
                        Command="{Binding IGetAllUsersList}">
                    <TextBlock TextAlignment="Center"> Все <LineBreak/> сотрудники</TextBlock>
                </Button>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="1"/>
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="#FF121212" Offset="0.796"/>
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60px"/>
                        <RowDefinition Height="40px"/>
                        <RowDefinition Height="60px"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" 
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               FontFamily="Arial"
                               FontSize="20"
                               FontWeight="DemiBold"
                               Margin="20, 0"
                               Text="Список всех сотрудников организации"/>
                    <TextBox Grid.Row="1" 
                             x:Name="SearchStringBox" 
                             Style="{StaticResource TaskListSearchBox}"
                             Margin="15 0"
                             FontFamily="Arial"
                             FontSize="14"
                             Text="{Binding SearchString}"
                             TextChanged="SearchTextBox_TextChanged"/>
                    <Label Grid.Row="1"
                           IsHitTestVisible="False" 
                           Content="Поиск по фамилии, имени и отчеству..."
                           VerticalAlignment="Center"
                           Margin="18 0"
                           Foreground="Gray"
                           FontFamily="Arial"
                           FontSize="14"
                           Visibility="{Binding Text.IsEmpty, ElementName=SearchStringBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <Button Grid.Row="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0 0 25 0"
                            Padding="10"
                            Background="White"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Style="{StaticResource SearchButton}"
                            Height="25"
                            Width="25"
                            Command="{Binding IFindItem}">
                        <Image Width="25" Height="25" Source="/Resources/Images/SearchIcon.png"/>
                    </Button>
                    <Grid Grid.Row="2"
                          Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Выбрать отдел"
                               FontFamily="Arial"
                               FontSize="14"
                               FontWeight="Bold"
                               Margin="20 5"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>
                            <ComboBox x:Name="ComboBoxDepartments" 
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Right"
                                  Width="300"
                                  Margin="20 5"
                                  Height="40"
                                  FontFamily="Arial"
                                  FontSize="14"
                                  FontWeight="Bold"
                                  VerticalContentAlignment="Center"
                                  ItemsSource="{Binding ComboDepartments}"
                                  SelectedItem="{Binding ComboSelectedDepartment}" 
                                  ScrollViewer.CanContentScroll="True"
                                  SelectedIndex="{Binding ComboSelectedIndex}">
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="3"
                          Margin="20 15 20 10">
                        <Grid>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40px"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Background="#FF6500CB">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"/>
                                    <TextBlock Grid.Column="1"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontFamily="Arial"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"
                                           Text="Фамилия, имя, отчество"/>
                                    <TextBlock Grid.Column="2"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontFamily="Arial"
                                           FontSize="12"
                                           FontWeight="DemiBold"
                                           Foreground="White"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"
                                           Text="Отдел / Департамент"/>
                                    <TextBlock Grid.Column="3"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontFamily="Arial"
                                           FontSize="12"
                                           FontWeight="DemiBold"
                                           Foreground="White"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"
                                           Text="Занимаемая должность"/>
                                    <TextBlock Grid.Column="4"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontFamily="Arial"
                                           FontSize="12"
                                           FontWeight="DemiBold"
                                           Foreground="White"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"
                                           Text="Логин"/>
                                    <TextBlock Grid.Column="5"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontFamily="Arial"
                                           FontSize="12"
                                           FontWeight="DemiBold"
                                           Foreground="White"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"
                                           Text="Роль"/>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <ListView ItemsSource="{Binding Users}"
                                              SelectedItem="{Binding SelectedUser, Mode=TwoWay}">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="60"/>
                                                        <ColumnDefinition Width="150"/>
                                                        <ColumnDefinition Width="150"/>
                                                        <ColumnDefinition Width="150"/>
                                                        <ColumnDefinition Width="80"/>
                                                        <ColumnDefinition Width="80"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid Grid.Column="0">
                                                        <Border Grid.Column="0"
                                                                    BorderThickness="2"
                                                                    BorderBrush="DimGray"
                                                                    CornerRadius="2"
                                                                    Width="50">
                                                            <Image Width="50"
                                                                       Height="50"
                                                                       Source="{Binding EmployeeImagePath,
                                                                    FallbackValue={StaticResource DefaultContactImage},
                                                                    TargetNullValue={StaticResource DefaultContactImage}}"
                                                                       Stretch="UniformToFill"/>
                                                        </Border>
                                                    </Grid>
                                                    <TextBlock Grid.Column="1"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               FontFamily="Arial"
                                                               FontSize="12"
                                                               FontWeight="DemiBold"
                                                               TextWrapping="Wrap"
                                                               TextAlignment="Center"
                                                               Text="{Binding EmployeeFullName}"/>
                                                    <TextBlock Grid.Column="2"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               FontFamily="Arial"
                                                               FontSize="12"
                                                               FontWeight="DemiBold"
                                                               TextWrapping="Wrap"
                                                               TextAlignment="Center"
                                                               Text="{Binding EmployeeDepartmentTitle}"/>
                                                    <TextBlock Grid.Column="3"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               FontFamily="Arial"
                                                               FontSize="12"
                                                               FontWeight="DemiBold"
                                                               TextWrapping="Wrap"
                                                               TextAlignment="Center"
                                                               Text="{Binding EmployeePosition}"/>
                                                    <TextBlock Grid.Column="4"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               FontFamily="Arial"
                                                               FontSize="12"
                                                               FontWeight="DemiBold"
                                                               TextWrapping="Wrap"
                                                               TextAlignment="Center"
                                                               Text="{Binding Userlogin}"/>
                                                    <TextBlock Grid.Column="5"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               FontFamily="Arial"
                                                               FontSize="12"
                                                               FontWeight="DemiBold"
                                                               TextWrapping="Wrap"
                                                               TextAlignment="Center"
                                                               Text="{Binding UserRole}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>

                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="2" Background="Black">

        </Grid>
    </Grid>
</Window>