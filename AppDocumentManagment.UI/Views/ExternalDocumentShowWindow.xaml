<Window x:Class="AppDocumentManagment.UI.Views.ExternalDocumentShowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppDocumentManagment.UI.Views"
        mc:Ignorable="d"
        Title="АИС Документооборот"  
        Height="900"
        Width="600"
        Icon="/Resources/Images/AppIcon.png" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0.778"/>
                <GradientStop Color="White" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="60px"/>
            <RowDefinition Height="120px"/>
            <RowDefinition Height="240px"/>
            <RowDefinition Height="320px"/>
            <RowDefinition Height="100px"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF7D00FF" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Label Grid.Row="0" 
                   x:Name="GreetingLabel"
                   Content="Окно документа" 
                   HorizontalAlignment="Left" 
                   Padding="20,0"
                   Style="{StaticResource TopPanelLabel}"
                   Foreground="WhiteSmoke"/>
            <Button x:Name="ExitBtn"
                    Content="Выйти"
                    HorizontalAlignment="Right"
                    Style="{StaticResource Buttons}"
                    Margin="10, 5"
                    Padding="20, 0"
                    Command="{Binding IExit}"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid>
                <StackPanel Orientation="Vertical">
                    <Grid Margin="0 10 0 5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                   Style="{StaticResource AdminDocumentTextblock}"
                                   HorizontalAlignment="Left"
                                   Foreground="Black"
                                   FontSize="16"
                                   Margin="20 0"
                                   Text="Тип документа: "/>
                        <TextBlock Grid.Column="1" 
                                   Style="{StaticResource AdminDocumentTextblock}"
                                   HorizontalAlignment="Left"
                                   Foreground="Black"
                                   FontSize="16"
                                   Margin="20 0"
                                   Text="{Binding DocumentType}"/>
                    </Grid>
                    <Grid Margin="0 5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                   Style="{StaticResource AdminDocumentTextblock}"
                                   HorizontalAlignment="Left"
                                   Foreground="Black"
                                   FontSize="16"
                                   Margin="20 0"
                                   Text="Номер документа : "/>
                        <TextBlock Grid.Column="1" 
                                   Style="{StaticResource AdminDocumentTextblock}"
                                   HorizontalAlignment="Left"
                                   Foreground="Black"
                                   FontSize="16"
                                   Margin="20 0"
                                   Text="{Binding DocumentNumber}"/>
                    </Grid>
                    <Grid Margin="0 5" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                   Style="{StaticResource AdminDocumentTextblock}"
                                   HorizontalAlignment="Left"
                                   Foreground="Black"
                                   FontSize="16"
                                   Margin="20 0 0 0"
                                   Text="Наименование документа : "/>
                        <TextBlock Grid.Column="1" 
                                   Style="{StaticResource AdminDocumentTextblock}"
                                   HorizontalAlignment="Left"
                                   Foreground="Black"
                                   FontSize="16"
                                   Margin="20 0"
                                   TextWrapping="Wrap"
                                   Text="{Binding DocumentTitle}"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Grid>
                <Border x:Name="CompanyInfo"
                        CornerRadius="5"
                        BorderThickness="0"
                        BorderBrush="Transparent">
                    <StackPanel Orientation="Vertical"
                                Margin="20 0">
                        <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                   HorizontalAlignment="Center"
                                   FontSize="20"
                                   Text="Информация о контрагенте"
                                   Margin="0 10 0 5"/>
                        <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                   HorizontalAlignment="Center"
                                   FontSize="24"
                                   Text="{Binding TextBlockCompanyTitle}"
                                   Margin="0 0 0 0"/>
                        <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                   HorizontalAlignment="Center"
                                   FontSize="16"
                                   Text="{Binding TextBlockCompanyShortTitle}"
                                   Margin="0 0 0 20"/>
                        <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                   HorizontalAlignment="Left"
                                   FontSize="14"
                                   Text="{Binding TextBlockCompanyAddress}"
                                   TextWrapping="Wrap"
                                   TextAlignment="Left"
                                   Margin="0 0 0 10"/>
                        <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                   HorizontalAlignment="Left"
                                   FontSize="14"
                                   Margin="0 0 0 10"
                                   Text="{Binding TextBlockCompanyPhone}"/>
                        <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                   HorizontalAlignment="Left"
                                   FontSize="14"
                                   Text="{Binding TextBlockCompanyEmail}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
        <Grid Grid.Row="3"
              Margin="0 0 0 20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0"
                       Style="{StaticResource TopPanelLabel}"
                       Foreground="White"
                       Margin="20 0"
                       Content="Файлы документа: "/>
                <Button Grid.Row="2" 
                        Style="{StaticResource Buttons}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Padding="10 10"
                        Margin="20 0"
                        Command="{Binding ILoadDocumentFiles}">
                    <TextBlock TextAlignment="Center">Скачать файлы<LineBreak/> из документа</TextBlock>
                </Button>
                <Button Grid.Row="2" 
                        Style="{StaticResource Buttons}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Padding="10 10"
                        Margin="20 0"
                        Command="{Binding IBrowseExternalDocumentFile}">
                    <TextBlock TextAlignment="Center">Добавить файл<LineBreak/> в документ</TextBlock>
                </Button>
                <ListView Grid.Row="1"
                          x:Name="FileList"
                          Margin="20 5 20 10"
                          ItemsSource="{Binding ExternalDocumentFiles}"
                          SelectedItem="{Binding SelectedExternalDocumentFile}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Style="{StaticResource AdminDocumentTextblock}" 
                                       Margin="5"
                                       Foreground="DimGray"
                                       Text="{Binding ExternalFileName}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>
        <Grid Grid.Row="4">
            <Button x:Name="RegisterOrUpdateBtn"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Style="{StaticResource Buttons}"
                    Padding="25 5"
                    Margin="20 20"
                    FontFamily="Arial" 
                    FontSize="18"
                    FontWeight="Bold"
                    Command="{Binding ISendToWork}">
                <TextBlock TextAlignment="Center"> Перенаправить<LineBreak/>документ</TextBlock>
            </Button>
            <Button x:Name="SendDocument"
                    HorizontalAlignment="Right"
                    Style="{StaticResource Buttons}"
                    Padding="25 5"
                    Margin="20 20"
                    FontFamily="Arial" 
                    FontSize="18"
                    FontWeight="Bold"
                    Command="{Binding ICreateTask}">
                <TextBlock TextAlignment="Center"> Создать задание <LineBreak/> к документу</TextBlock>
            </Button>
        </Grid>
        <Grid Grid.Row="7" Background="Black"/>
    </Grid>
</Window>

