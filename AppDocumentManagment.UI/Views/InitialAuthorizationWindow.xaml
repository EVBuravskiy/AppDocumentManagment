<Window x:Class="AppDocumentManagment.UI.Views.InitialAuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppDocumentManagment.UI.Views"
        Title="АИС Документооборот"  
        MinHeight="450" 
        MinWidth="1300" 
        Height="900"
        Width="1300"
        Icon="/Resources/Images/AppIcon.png" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>
        <Image Source="/Resources/Images/StartPageImage.png" 
                       VerticalAlignment="Top" 
                       HorizontalAlignment="Center"
                       Stretch="UniformToFill" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
        <Label HorizontalAlignment="Center"
               Margin="0 20 0 0"
               Style="{StaticResource TopPanelLabel}"
               VerticalAlignment="Top"
               FontSize="32"
               FontFamily="Impact" 
               FontWeight="Normal">
            <Label.Foreground>
                <RadialGradientBrush>
                    <GradientStop Color="#FF65037D" Offset="0.288"/>
                    <GradientStop Color="White" Offset="1"/>
                </RadialGradientBrush>
            </Label.Foreground>
            <TextBlock TextAlignment="Center"> Добро пожаловать <LineBreak/> в Автоматизированную информационную систему "Документооборот"</TextBlock>
        </Label>
        <Grid HorizontalAlignment="Center"
              VerticalAlignment="Center">
            <Border>
                <Grid Height="340" 
                      Width="580"
                      >
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="White" Offset="0"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Background="Transparent">
                        <Label Content="Для авторизации в системе введите Ваши логин и пароль" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               FontSize="20" 
                               Foreground="Black"
                               HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" 
                               FontFamily="Impact">
                        </Label>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>
                        <Label Content="Логин"  
                               Grid.Column="0" 
                               Grid.Row="0" 
                               Margin="25,0,10,0"
                               HorizontalContentAlignment="Left" 
                               VerticalContentAlignment="Center" 
                               FontFamily="Impact" FontSize="16"
                               Foreground="Black"/>
                        <Label Content="Пароль"
                               Grid.Column="0" 
                               Grid.Row="1" 
                               Margin="25,0,10,0"
                               HorizontalContentAlignment="Left" 
                               VerticalContentAlignment="Center" 
                               FontFamily="Impact" FontSize="16"
                               Foreground="Black" Grid.RowSpan="2"/>
                        <TextBox x:Name="LoginBox" 
                                 Grid.Column="1" 
                                 Grid.Row="0" 
                                 Width="410"
                                 Height="30"
                                 Margin="20, 0, 10, 0" 
                                 HorizontalAlignment="Left"
                                 BorderBrush="{Binding LoginBorderColor}"
                                 BorderThickness="{Binding LoginBorderThickness}"
                                 Style="{StaticResource ItemTitleBox}"
                                 Text="{Binding Login}"
                                 ToolTip="{Binding LoginTipText}"/>
                        <Label IsHitTestVisible="False" 
                               Content="Введите логин..."
                               VerticalAlignment="Center"
                               FontSize="14"
                               Margin="25,0,35,0"
                               Foreground="DimGray"
                               Visibility="{Binding Text.IsEmpty, ElementName=LoginBox, Converter={StaticResource BooleanToVisibilityConverter}}" RenderTransformOrigin="1.372,-0.976" Grid.Column="1"/>
                        <PasswordBox x:Name="PasswordBox" 
                                     Grid.Column="1" 
                                     Grid.Row="2" 
                                     Width="365"
                                     Height="30"
                                     Margin="20,0,0,0"
                                     HorizontalAlignment="Left"
                                     BorderBrush="{Binding PasswordBorderColor}"
                                     BorderThickness="{Binding PasswordBorderThickness}"
                                     Style="{StaticResource PassBox}"
                                     PasswordChanged="PasswordBox_PasswordChanged"
                                     Visibility="Visible"
                                     ToolTip="{Binding PasswordTipText}"/>
                        <TextBox x:Name="TextPasswordBox" 
                                 Grid.Column="2" 
                                 Grid.Row="3" 
                                 Width="365"
                                 Height="30"
                                 Margin="20,0,0,0"
                                 HorizontalAlignment="Left"
                                 BorderBrush="{Binding PasswordBorderColor}"
                                 BorderThickness="{Binding PasswordBorderThickness}"
                                 Style="{StaticResource ItemTitleBox}"
                                 Text="{Binding Password}"
                                 Visibility="Hidden"
                                 ToolTip="{Binding PasswordTipText}"/>
                        <Button x:Name="PassVisibility" 
                                Grid.Column="2" 
                                Grid.Row="3" 
                                Width="30"
                                Height="30"
                                Margin="20,0,20,0" 
                                HorizontalAlignment="Right"
                                Style="{StaticResource Buttons}" 
                                Click="ShowPass">
                            <Image Width="33" Height="33" Source="/Resources/Images/ShowPassword.png" Stretch="UniformToFill"/>
                        </Button>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Button x:Name="AuthBtn"
                                Content="Войти в систему" 
                                HorizontalAlignment="Right" 
                                Margin="20" 
                                FontFamily="Impact" 
                                FontSize="16"
                                Style="{StaticResource Buttons}"
                                Command="{Binding IAuthorization}"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
