<Window x:Class="AppDocumentManagment.UI.Views.InternalDocumentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppDocumentManagment.UI.Views"
        mc:Ignorable="d"
        Title="АИС Документооборот"  
        Height="860"
        Width="600"
        Icon="/Resources/Images/AppIcon.png" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0.778"/>
                <GradientStop Color="White" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="40px"/>
            <RowDefinition Height="80px"/>
            <RowDefinition Height="180px"/>
            <RowDefinition Height="180px"/>
            <RowDefinition Height="200px"/>
            <RowDefinition Height="120px"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF7D00FF" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Label Grid.Row="0" 
                   x:Name="GreetingLabel"
                   Content="Панель редактирования документа" 
                   HorizontalAlignment="Left" 
                   Padding="20,0"
                   Style="{StaticResource TopPanelLabel}"
                   Foreground="WhiteSmoke"/>
            <Button x:Name="ExitBtn"
                    Content="Выйти"
                    HorizontalAlignment="Right"
                    Style="{StaticResource Buttons}"
                    Margin="10, 5"
                    Padding="20, 0"
                    Command="{Binding IExit}"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Label Style="{StaticResource TopPanelLabel}"
                               HorizontalAlignment="Left"
                               Foreground="Black"
                               Margin="25 0"
                               Content="Выберите тип документа"/>
                        <ComboBox HorizontalAlignment="Right"
                                  Margin="30 0"
                                  Width="300"
                                  Height="30"
                                  FontFamily="Arial"
                                  FontSize="14"
                                  FontWeight="DemiBold"
                                  HorizontalContentAlignment="Center"
                                  VerticalContentAlignment="Center"
                                  Background="WhiteSmoke"
                                  ItemsSource="{Binding InternalDocumentTypes}"
                                  SelectedIndex="{Binding SelectedInternalDocumentTypeIndex}"
                                  SelectedItem="{Binding SelectedInternalDocumentType}"/>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Label Style="{StaticResource TopPanelLabel}"
                               HorizontalAlignment="Left"
                               Foreground="Black"
                               Margin="25 0"
                               Content="Введите или выберите дату документа:"/>
                        <DatePicker x:Name="InternalDocumentDate"
                                    Background="White"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    BorderBrush="Transparent"
                                    FontFamily="Arial"
                                    FontSize="14"
                                    FontWeight="DemiBold"
                                    HorizontalContentAlignment="Stretch"
                                    Margin="20 0"
                                    Padding="10 0"
                                    SelectedDateFormat="Short" IsDropDownOpen="False"
                                    SelectedDate="{Binding InternalDocumentDate}"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40px"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Button Style="{StaticResource Buttons}"
                            Padding="10 5"
                            Margin="20 0"
                            Command="{Binding IOpenSignatoryWindow}">
                        <TextBlock TextAlignment="Center">Добавить <LineBreak/> инициатора / подписанта</TextBlock>
                    </Button>
                </Grid>
                <Grid Grid.Row="1"
                      Margin="20 10">
                    <Grid>
                        <Border x:Name="SignatoryInfo"
                                CornerRadius="5"
                                BorderThickness="0"
                                BorderBrush="Transparent">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                       HorizontalAlignment="Center"
                                       FontSize="20"
                                       Text="Информация об инициаторе / подписанте"
                                       Margin="0 5 0 5"/>
                                <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                       HorizontalAlignment="Center"
                                       FontSize="20"
                                       Text="{Binding SignatoryDepartment}"
                                       Margin="0 5 0 0"/>
                                <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                       HorizontalAlignment="Center"
                                       FontSize="16"
                                       Text="{Binding SignatoryPosition}"
                                       Margin="0 0 0 10"/>
                                <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                       HorizontalAlignment="Center"
                                       FontSize="20"
                                       Text="{Binding SignatoryFullName}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Left"
                                       Margin="0 0 0 3"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40px"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Button Style="{StaticResource Buttons}"
                            Padding="10 5"
                            Margin="20 0"
                            Command="{Binding IOpenApprovedManagerWindow}">
                        <TextBlock TextAlignment="Center">Добавить <LineBreak/> лицо согласовашее документ</TextBlock>
                    </Button>
                </Grid>
                <Grid Grid.Row="1"
                      Margin="20 10">
                    <Grid>
                        <Border x:Name="AgreeEmployer"
                                CornerRadius="5"
                                BorderThickness="0"
                                BorderBrush="Transparent">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                       HorizontalAlignment="Center"
                                       FontSize="20"
                                       Text="Информация о лице согласовавшем документ"
                                       Margin="0 5 0 5"/>
                                <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                       HorizontalAlignment="Center"
                                       FontSize="20"
                                       Text="{Binding ApprovedManagerDepartment}"
                                       Margin="0 5 0 0"/>
                                <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                       HorizontalAlignment="Center"
                                       FontSize="16"
                                       Text="{Binding ApprovedManagerPosition}"
                                       Margin="0 0 0 10"/>
                                <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                       HorizontalAlignment="Center"
                                       FontSize="20"
                                       Text="{Binding ApprovedManagerFullName}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Left"
                                       Margin="0 0 0 3"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="4"
              Margin="0 0 0 20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0"
                       Style="{StaticResource TopPanelLabel}"
                       Foreground="White"
                       Margin="20 0"
                       Content="Файлы приложения к документу: "/>
                <Button Grid.Row="2" 
                        Width="250"
                        Style="{StaticResource Buttons}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Content="Удалить файл из документа"
                        Padding="10 10"
                        Margin="20 0"
                        Command="{Binding IDeleteInternalDocumentFile}"/>
                <Button Grid.Row="2" 
                        Style="{StaticResource Buttons}"
                        Width="250"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Content="Добавить файл в документ"
                        Padding="10 10"
                        Margin="20 0"
                        Command="{Binding IBrowseInternalDocumentFiles}"/>
                <ListView Grid.Row="1"
                          x:Name="FileList"
                          Margin="20 5 20 10"
                          ItemsSource="{Binding InternalDocumentFiles}"
                          SelectedItem="{Binding SelectedInternalDocumentFile}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Style="{StaticResource AdminDocumentTextblock}" Text="{Binding FileName}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>
        <Grid Grid.Row="5">
            <Button Content="Удалить документ" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Style="{StaticResource Buttons}"
                    Width="250"
                    Padding="10 10"
                    Margin="20 20"
                    FontFamily="Arial" 
                    FontSize="14"
                    FontWeight="Bold"
                    Command="{Binding IRemoveInternalDocument}"/>
            <Button Content="Зарегистрировать документ" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Style="{StaticResource Buttons}"
                    Width="250"
                    Padding="10, 10"
                    Margin="20 20"
                    FontFamily="Arial" 
                    FontSize="14"
                    FontWeight="Bold"
                    Command="{Binding IRegisterInternalDocument}"/>
            <Button x:Name="SendDocument"
                    HorizontalAlignment="Right"
                    Style="{StaticResource Buttons}"
                    Width="250"
                    Padding="35, 5"
                    Margin="20 20"
                    FontFamily="Arial" 
                    FontSize="18"
                    FontWeight="Bold"
                    Command="{Binding ISendToExaminingPerson}">
                <TextBlock TextAlignment="Center"> Передать на<LineBreak/>рассмотрение</TextBlock>
            </Button>
        </Grid>
    </Grid>
</Window>