<Window x:Class="AppDocumentManagment.UI.Views.DocumentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppDocumentManagment.UI.Views"
        mc:Ignorable="d"
        Title="АИС Документооборот"  
        Height="720"
        Width="550"
        Icon="/Resources/Images/AppIcon.png" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40px"/>
            <RowDefinition Height="200px"/>
            <RowDefinition Height="100px"/>
            <RowDefinition Height="200px"/>
            <RowDefinition Height="120px"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF7D00FF" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Label Grid.Row="0" 
                   x:Name="GreetingLabel"
                   Content="Панель редактирования документа" 
                   HorizontalAlignment="Left" 
                   Padding="20,0"
                   Style="{StaticResource TopPanelLabel}"
                   Foreground="WhiteSmoke"/>
            <Button x:Name="ExitBtn"
                    Content="Выйти"
                    HorizontalAlignment="Right"
                    Style="{StaticResource Buttons}"
                    Margin="10, 5"
                    Padding="10, 0"
                    Command="{Binding IExit}"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Label Style="{StaticResource TopPanelLabel}"
                               HorizontalAlignment="Left"
                               Foreground="Black"
                               Margin="20 0"
                               Content="Выберите тип документа"/>
                        <ComboBox HorizontalAlignment="Right"
                                  Margin="30 0"
                                  Width="250"
                                  Height="30"/>
                    </Grid>
                    <TextBox x:Name="DocumentNumber" 
                             Grid.Row="1"
                             Style="{StaticResource ItemTitleBox}"
                             VerticalAlignment="Top"
                             FontSize="14"
                             Text="{Binding DocumentNumber}"
                             Background="WhiteSmoke"
                             SpellCheck.IsEnabled="True"/>
                    <Label IsHitTestVisible="False" 
                           Grid.Row="1"
                           Foreground="DimGray"
                           Content="Введите номер документа при наличии..."
                           VerticalAlignment="Top"
                           FontSize="14"
                           Visibility="{Binding Text.IsEmpty, ElementName=DocumentNumber, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="30 10"/>
                    <Grid Grid.Row="2">
                        <Label Style="{StaticResource TopPanelLabel}"
                               HorizontalAlignment="Left"
                               Foreground="Black"
                               Margin="25 0"
                               Content="Введите или выберите дату документа:"/>
                        <DatePicker HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    BorderBrush="Transparent"
                                    FontFamily="Arial"
                                    FontSize="14"
                                    FontWeight="DemiBold"
                                    HorizontalContentAlignment="Center"
                                    Margin="20 0"
                                    Padding="10 0"
                                    Width="200" SelectedDateFormat="Long" IsDropDownOpen="True"/>
                    </Grid>
                    <TextBox x:Name="DocumentTitle" 
                             Grid.Row="3"
                             Style="{StaticResource ItemTitleBox}"
                             VerticalAlignment="Top"
                             FontSize="14"
                             Text="{Binding DocumentTitle}"
                             Background="WhiteSmoke"
                             SpellCheck.IsEnabled="True"
                             TextWrapping="Wrap"/>
                    <Label IsHitTestVisible="False" 
                           Grid.Row="3"
                           Foreground="DimGray"
                           Content="Введите наименование документа..."
                           VerticalAlignment="Top"
                           FontSize="14"
                           Visibility="{Binding Text.IsEmpty, ElementName=DocumentNumber, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="30 10"/>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Button Style="{StaticResource Buttons}"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Padding="10 5"
                    Margin="20 10"
                    Content="Выбрать контрагента"/>
            <Grid HorizontalAlignment="Right"
                  Margin="0 0 20 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           VerticalAlignment="Center"
                           Style="{StaticResource AdminDocumentTextblock}"
                           Text="Наименование организации"
                           TextAlignment="Center"/>
                <TextBlock Grid.Row="1"
                           VerticalAlignment="Top"
                           Style="{StaticResource AdminDocumentTextblock}"
                           Text="Сокращенное наименование организации"
                           TextAlignment="Center"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0"
                       Style="{StaticResource TopPanelLabel}"
                       Foreground="Black"
                       Margin="20 0"
                       Content="Файлы документа: "/>
                <Button Grid.Row="2" 
                        Style="{StaticResource Buttons}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Content="Удалить файл документа"
                        Padding="10 5"
                        Margin="20 0"/>
                <Button Grid.Row="2" 
                        Style="{StaticResource Buttons}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Content="Добавить файл документа"
                        Padding="10 5"
                        Margin="20 0"/>
                <Viewbox Grid.Row="1"
                         Margin="20 5">
                </Viewbox>
            </Grid>
        </Grid>
        <Grid Grid.Row="4"
              Margin="0 20">
            <Button Content="Удалить документ" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Style="{StaticResource Buttons}"
                    Padding="10 5"
                    Margin="20 10"
                    FontFamily="Arial" 
                    FontSize="14"
                    FontWeight="Bold"
                    Command="{Binding IRemove}"/>
            <Button Content="Сохранить изменения" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Style="{StaticResource Buttons}"
                    Padding="10, 5"
                    Margin="20 10"
                    FontFamily="Arial" 
                    FontSize="14"
                    FontWeight="Bold"
                    Command="{Binding ISave}"/>
            <Button x:Name="SendDocument"
                    HorizontalAlignment="Right"
                    Style="{StaticResource Buttons}"
                    Padding="35, 5"
                    Margin="20 5"
                    FontFamily="Arial" 
                    FontSize="16"
                    FontWeight="Bold">
                <TextBlock TextAlignment="Center"> Передать <LineBreak/> на рассмотрение </TextBlock>
            </Button>
        </Grid>
        <Grid Grid.Row="7">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF7D00FF" Offset="0"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>
    </Grid>
</Window>
