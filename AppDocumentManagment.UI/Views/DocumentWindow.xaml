<Window x:Class="AppDocumentManagment.UI.Views.DocumentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppDocumentManagment.UI.Views"
        mc:Ignorable="d"
        Title="АИС Документооборот"  
        Height="900"
        Width="600"
        Icon="/Resources/Images/AppIcon.png" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0.778"/>
                <GradientStop Color="White" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="60px"/>
            <RowDefinition Height="200px"/>
            <RowDefinition Height="240px"/>
            <RowDefinition Height="200px"/>
            <RowDefinition Height="120px"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF7D00FF" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Label Grid.Row="0" 
                   x:Name="GreetingLabel"
                   Content="Панель редактирования документа" 
                   HorizontalAlignment="Left" 
                   Padding="20,0"
                   Style="{StaticResource TopPanelLabel}"
                   Foreground="WhiteSmoke"/>
            <Button x:Name="ExitBtn"
                    Content="Выйти"
                    HorizontalAlignment="Right"
                    Style="{StaticResource Buttons}"
                    Margin="10, 5"
                    Padding="20, 0"
                    Command="{Binding IExit}"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Label Style="{StaticResource TopPanelLabel}"
                               HorizontalAlignment="Left"
                               Foreground="Black"
                               Margin="20 0"
                               Content="Выберите тип документа"/>
                        <ComboBox HorizontalAlignment="Right"
                                  Margin="30 0"
                                  Width="300"
                                  Height="30"
                                  FontFamily="Futura Now"
                                  FontSize="14"
                                  FontWeight="DemiBold"
                                  HorizontalContentAlignment="Center"
                                  VerticalContentAlignment="Center"
                                  Background="WhiteSmoke"
                                  ItemsSource="{Binding DocumentTypes}"
                                  SelectedIndex="{Binding SelectedDocumentTypeIndex}"
                                  SelectedItem="{Binding SelectedDocumentType}"/>
                    </Grid>
                    <TextBox x:Name="DocumentNumber" 
                             Grid.Row="1"
                             Style="{StaticResource ItemTitleBox}"
                             VerticalAlignment="Top"
                             FontSize="14"
                             Text="{Binding DocumentNumber}"
                             Background="WhiteSmoke"
                             SpellCheck.IsEnabled="True"
                             ToolTip="Введите номер входящего документа"
                             />
                    <Label IsHitTestVisible="False" 
                           Grid.Row="1"
                           Foreground="DimGray"
                           Content="Введите номер документа при наличии..."
                           VerticalAlignment="Top"
                           FontSize="14"
                           Visibility="{Binding Text.IsEmpty, ElementName=DocumentNumber, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="30 10"/>
                    <Grid Grid.Row="2">
                        <Label Style="{StaticResource TopPanelLabel}"
                               HorizontalAlignment="Left"
                               Foreground="Black"
                               Margin="25 0"
                               Content="Введите или выберите дату документа:"/>
                        <DatePicker x:Name="DocumentDate"
                                    Background="White"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    BorderBrush="Transparent"
                                    FontFamily="Futura Now"
                                    FontSize="14"
                                    FontWeight="DemiBold"
                                    HorizontalContentAlignment="Stretch"
                                    Margin="20 0"
                                    Padding="10 0"
                                    SelectedDateFormat="Short" IsDropDownOpen="False"
                                    SelectedDate="{Binding DocumentDate}"/>
                    </Grid>
                    <TextBox x:Name="DocumentTitle" 
                             Grid.Row="3"
                             Style="{StaticResource ItemTitleBox}"
                             VerticalAlignment="Top"
                             FontSize="14"
                             Text="{Binding DocumentTitle}"
                             Background="WhiteSmoke"
                             SpellCheck.IsEnabled="True"
                             TextWrapping="Wrap"
                             ToolTip="Введите наименование входящего документа"
                             />
                    <Label IsHitTestVisible="False" 
                           Grid.Row="3"
                           Foreground="DimGray"
                           Content="Введите наименование документа..."
                           VerticalAlignment="Top"
                           FontSize="14"
                           Visibility="{Binding Text.IsEmpty, ElementName=DocumentTitle, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="30 10"/>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50px"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Button Style="{StaticResource Buttons}"
                            Padding="10 5"
                            Margin="20 0"
                            Command="{Binding IOpenContractorCompanyListWindow}">
                        <Grid>
                        <TextBlock x:Name="ButtonAddCompany"
                                   TextAlignment="Center"
                                   Visibility="Visible">Добавить <LineBreak/> контрагента</TextBlock>
                        <TextBlock x:Name="ButtonChangeCompany"
                                   TextAlignment="Center"
                                   Visibility="Hidden">Изменить <LineBreak/> контрагента</TextBlock>
                        </Grid>
                    </Button>
                </Grid>
                <Grid Grid.Row="1"
                      Margin="20 10">
                    <Grid>
                        <Border x:Name="CompanyInfo"
                                CornerRadius="5"
                                BorderThickness="0"
                                BorderBrush="Transparent">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                       HorizontalAlignment="Center"
                                       FontSize="20"
                                       Text="Информация о контрагенте"
                                       Margin="0 5 0 5"/>
                            <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                       HorizontalAlignment="Center"
                                       FontSize="20"
                                       Text="{Binding TextBlockCompanyTitle}"
                                       Margin="0 5 0 0"/>
                            <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                       HorizontalAlignment="Center"
                                       FontSize="16"
                                       Text="{Binding TextBlockCompanyShortTitle}"
                                       Margin="0 0 0 10"/>
                            <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                       HorizontalAlignment="Left"
                                       FontSize="14"
                                       Text="{Binding TextBlockCompanyAddress}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Left"
                                       Margin="0 0 0 3"/>
                            <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                       HorizontalAlignment="Left"
                                       FontSize="14"
                                       Margin="0 0 0 3"
                                       Text="{Binding TextBlockCompanyPhone}"/>
                            <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                       HorizontalAlignment="Left"
                                       FontSize="14"
                                       Text="{Binding TextBlockCompanyEmail}"/>
                        </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="3"
              Margin="0 0 0 20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0"
                       Style="{StaticResource TopPanelLabel}"
                       Foreground="White"
                       Margin="20 0"
                       Content="Файлы документа: "/>
                <Button Grid.Row="2" 
                        Style="{StaticResource Buttons}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Padding="10 10"
                        Margin="20 0"
                        Command="{Binding IDeleteDocumentFile}">
                    <TextBlock TextAlignment="Center">Удалить файл<LineBreak/> из документа</TextBlock>
                </Button>
                <Button Grid.Row="2" 
                        Style="{StaticResource Buttons}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Padding="10 10"
                        Margin="20 0"
                        Command="{Binding IBrowseDocumentFiles}">
                    <TextBlock TextAlignment="Center">Добавить файл<LineBreak/> в документ</TextBlock>
                </Button>
                <ListView Grid.Row="1"
                          x:Name="FileList"
                          Margin="20 5 20 10"
                          ItemsSource="{Binding DocumentFiles}"
                          SelectedItem="{Binding SelectedDocumentFile}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Style="{StaticResource AdminDocumentTextblock}" Text="{Binding ExternalFileName}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>
        <Grid Grid.Row="4">
            <Button Content="Удалить документ" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Style="{StaticResource Buttons}"
                    Padding="10 10"
                    Margin="20 5"
                    FontFamily="Futura Now" 
                    FontSize="14"
                    FontWeight="Bold"
                    Command="{Binding IRemoveDocument}"/>
            <Button x:Name="RegisterOrUpdateBtn"
                    Content="{Binding RegisterOrUpdateBtnTitle}" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Style="{StaticResource Buttons}"
                    Padding="10, 10"
                    Margin="20 5"
                    FontFamily="Futura Now" 
                    FontSize="16"
                    FontWeight="Bold"
                    Command="{Binding IRegisterOrRenewDocument}"/>
            <Button x:Name="SendDocument"
                    HorizontalAlignment="Right"
                    Style="{StaticResource Buttons}"
                    Padding="25 5"
                    Margin="20 20"
                    FontFamily="Futura Now" 
                    FontSize="18"
                    FontWeight="Bold"
                    Height="80"
                    Command="{Binding ISendToExaminingPerson}">
                <TextBlock TextAlignment="Center"> Направить на <LineBreak/>рассмотрение <LineBreak/>руководителю</TextBlock>
            </Button>
        </Grid>
        <Grid Grid.Row="7" Background="Black"/>
    </Grid>
</Window>
