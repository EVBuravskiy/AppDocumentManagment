<Window x:Class="AppDocumentManagment.UI.Views.RegisterUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppDocumentManagment.UI.Views"
        mc:Ignorable="d"
        Title="АИС Документооборот"  
        Height="550"
        Width="520"
        Icon="/Resources/Images/AppIcon.png" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="ThreeDBorderWindow" ResizeMode="NoResize">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0.778"/>
                <GradientStop Color="White" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="40px"/>
            <RowDefinition Height="150px"/>
            <RowDefinition Height="50px"/>
            <RowDefinition Height="180px"/>
            <RowDefinition Height="40px"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF7D00FF" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Label Grid.Row="0" 
                   x:Name="GreetingLabel"
                   Content="Панель регистрации сотрудника" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Center" 
                   FontFamily="Arial" 
                   FontSize="14" 
                   FontWeight="Bold"
                   Padding="20,0"
                   Foreground="WhiteSmoke"/>
            <Button x:Name="ExitBtn"
                    Content="Выйти"
                    HorizontalAlignment="Right"
                    Style="{StaticResource Buttons}"
                    FontFamily="Arial" 
                    FontSize="14" 
                    Margin="10, 5"
                    Padding="10, 0"
                    FontWeight="Bold"
                    Command="{Binding IExit}"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid Margin="20 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130px"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Image Height="120" Width="110"
                           Source="{Binding UserImagePath,
                        FallbackValue={StaticResource DefaultContactImage},
                        TargetNullValue={StaticResource DefaultContactImage}}"
                           Stretch="UniformToFill"/>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontFamily="Arial"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="20 0"
                               Text="{Binding UserLastName}"/>
                    <TextBlock Grid.Row="1"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontFamily="Arial"
                               FontSize="20"
                               FontWeight="DemiBold"
                               Margin="20 0"
                               Text="{Binding UserFirstName}"/>
                    <TextBlock Grid.Row="2"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontFamily="Arial"
                               FontSize="20"
                               FontWeight="DemiBold"
                               Margin="20 0"
                               Text="{Binding UserMiddleName}"/>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <StackPanel Orientation="Vertical">
                <Grid Margin="30 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                           VerticalAlignment="Center"
                           FontFamily="Arial"
                           FontSize="14"
                           FontWeight="Bold"
                           Content="Отдел/Департамент"/>
                    <TextBlock Grid.Column="1"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontFamily="Arial"
                               FontSize="14"
                               FontWeight="Bold"
                               Text="{Binding UserDepartmentTitle}"/>
                </Grid>
                <Grid Margin="30 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                           VerticalAlignment="Center"
                           FontFamily="Arial"
                           FontSize="14"
                           FontWeight="Bold"
                           Content="Должность:"/>
                    <TextBlock Grid.Column="1"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontFamily="Arial"
                               FontSize="14"
                               FontWeight="Bold"
                               Text="{Binding UserPosition}"/>
                </Grid>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="3">
            <StackPanel Orientation="Vertical">
                <Label Content="Выберите роль пользователя из предложенного списка:"
                       FontFamily="Arial"
                       FontSize="14"
                       FontWeight="Bold"
                       Margin="30, 5"/>
                <ComboBox Height="30"
                          Margin="30, 0"
                          FontFamily="Arial"
                          FontSize="14"
                          FontWeight="DemiBold"
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          ItemsSource="{Binding UserRoles}"
                          SelectedIndex="{Binding SelectedUserRoleIndex}"
                          SelectedItem="{Binding SelectedUserRole}"/>
                <Grid Margin="10">
                    <TextBox x:Name="EmployeeLogin" 
                             Style="{StaticResource ItemTitleBox}"
                             VerticalAlignment="Top"
                             FontSize="14"
                             Text="{Binding UserLogin}"
                             Margin="20 5"
                             Background="WhiteSmoke"/>
                    <Label IsHitTestVisible="False"
                           Foreground="DimGray"
                           Content="Создайте логин пользователя для регистрации..."
                           VerticalAlignment="Top"
                           FontSize="14"
                           Visibility="{Binding Text.IsEmpty, ElementName=EmployeeLogin, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="30 5"/>
                </Grid>
                <Grid Margin="10">
                    <TextBox x:Name="EmployeePassword" 
                             Style="{StaticResource ItemTitleBox}"
                             VerticalAlignment="Top"
                             FontSize="14"
                             Text="{Binding UserPassword}"
                             Margin="20 0"
                             Background="WhiteSmoke"/>
                    <Label IsHitTestVisible="False"
                           Foreground="DimGray"
                           Content="Создайте пароль пользователя для его регистрации..."
                           VerticalAlignment="Top"
                           FontSize="14"
                           Visibility="{Binding Text.IsEmpty, ElementName=EmployeePassword, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="30 0"/>
                </Grid>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="4">
            <Button x:Name="DeleteBtn"
                    Content="Удалить регистрацию" 
                    HorizontalAlignment="Left"
                    Style="{StaticResource Buttons}"
                    Padding="10 5"
                    Margin="30 5"
                    FontFamily="Arial" 
                    FontSize="14"
                    FontWeight="Bold"
                    Command="{Binding IRemoveRegistration}"
                    Visibility="Hidden"/>
            <Button x:Name="EditBtn"
                    HorizontalAlignment="Right"
                    Style="{StaticResource Buttons}"
                    Padding="10, 5"
                    Margin="30 5"
                    FontFamily="Arial" 
                    FontSize="14"
                    FontWeight="Bold"
                    Command="{Binding IRegisterUser}"/>
        </Grid>
        <Grid Grid.Row="5"/>
    </Grid>
</Window>