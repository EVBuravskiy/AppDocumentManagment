<Window x:Class="AppDocumentManagment.UI.Views.DocumentRegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppDocumentManagment.UI.Views"
        mc:Ignorable="d"
        Title="АИС Документооборот"  
        MinHeight="450" 
        MinWidth="1300" 
        Height="900"
        Width="1800"
        Icon="/Resources/Images/AppIcon.png" WindowStartupLocation="CenterScreen" WindowState="Maximized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60px"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40px"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF7D00FF" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Label x:Name="GreetingLabel"
                   Content="Панель регистрации документов" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Center" 
                   FontFamily="Arial" 
                   FontSize="14" 
                   FontWeight="Bold"
                   Padding="20,0"
                   Foreground="WhiteSmoke"/>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
            <Label x:Name="CurrentUserName" 
                   Content="{Binding Greating}"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   FontFamily="Arial" 
                   FontSize="14" 
                   FontWeight="Bold"
                   Margin="20, 0"
                   Foreground="WhiteSmoke"/>
            <Button x:Name="ExitBtn"
                    Content="Выйти"
                    HorizontalAlignment="Right"
                    Style="{StaticResource Buttons}"
                    FontFamily="Arial" 
                    FontSize="14" 
                    Margin="10, 5"
                    Padding="10, 0"
                    FontWeight="Bold"
                    Command="{Binding IExit}"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="230"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="1"/>
                        <GradientStop Color="#FF7F00FF" Offset="0"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="75"/>
                    <RowDefinition Height="75"/>
                    <RowDefinition Height="75"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Grid.Row="0" 
                        Style="{StaticResource Buttons}"
                        Padding="10"
                        Margin="10"
                        Command="{Binding IShowExternalDocuments}">
                    <TextBlock TextAlignment="Center"> Поступившие <LineBreak/> документы</TextBlock>
                </Button>
                <Button Grid.Row="1"
                        Style="{StaticResource Buttons}"
                        Padding="10"
                        Margin="10"
                        Command="{Binding IShowInternalDocuments}">
                    <TextBlock TextAlignment="Center"> Внутренние <LineBreak/> документы</TextBlock>
                </Button>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="1"/>
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="#FF121212" Offset="0.796"/>
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80px"/>
                        <RowDefinition Height="40px"/>
                        <RowDefinition Height="60px"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="ExternalDocumentTitle"
                               Grid.Row="0" 
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               FontFamily="Arial"
                               FontSize="20"
                               FontWeight="DemiBold"
                               Margin="20, 0"
                               Text="Регистрация поступивших документов"
                               Visibility="Visible"/>
                    <ComboBox  x:Name="SelectInternalDocumentStatus"
                               Grid.Row="0" 
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               FontFamily="Arial"
                               FontSize="20"
                               FontWeight="DemiBold"
                               Margin="20, 0"
                               Width="600"
                               Height="40"
                               VerticalContentAlignment="Center"
                               HorizontalContentAlignment="Left"
                               ItemsSource="{Binding InternalDocumentRegistationStatus}"
                               SelectedIndex="{Binding SelectedInternalDocumentRegistationStatusIndex}"
                               SelectedItem="{Binding SelectedInternalDocumentRegistationStatus}"
                               Visibility="Hidden"/>
                    <Button HorizontalAlignment="Right"
                            Padding="10"
                            Margin="0 10 20 10"
                            Width="180"
                            Style="{StaticResource Buttons}"
                            Command="{Binding ICreateNewDocument}">
                        <TextBlock TextAlignment="Center"> Зарегистрировать <LineBreak/> документ</TextBlock>
                    </Button>

                    <TextBox Grid.Row="1" 
                             x:Name="SearchStringBox" 
                             Style="{StaticResource TaskListSearchBox}"
                             Margin="15 0"
                             FontFamily="Arial"
                             FontSize="14"
                             Text="{Binding SearchString}"
                             TextChanged="SearchTextBox_TextChanged"/>
                    <Label Grid.Row="1"
                           IsHitTestVisible="False" 
                           Content="{Binding SearchStringContent}"
                           VerticalAlignment="Center"
                           Margin="18 0"
                           Foreground="Gray"
                           FontFamily="Arial"
                           FontSize="14"
                           Visibility="{Binding Text.IsEmpty, ElementName=SearchStringBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <Button Grid.Row="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0 0 25 0"
                            Padding="10"
                            Background="White"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Style="{StaticResource SearchButton}"
                            Height="25"
                            Width="25"
                            Command="{Binding IFindItem}">
                        <Image Width="25" Height="25" Source="/Resources/Images/SearchIcon.png"/>
                    </Button>
                    <Grid Grid.Row="2"
                          Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Выбрать тип документа"
                               FontFamily="Arial"
                               FontSize="14"
                               FontWeight="Bold"
                               Margin="20 5"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>
                            <Grid>
                            <ComboBox x:Name="ComboBoxExternalDocumentTypes" 
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Right"
                                      Width="300"
                                      Margin="20 5"
                                      Height="40"
                                      FontFamily="Arial"
                                      FontSize="14"
                                      FontWeight="Bold"
                                      VerticalContentAlignment="Center"
                                      HorizontalContentAlignment="Center"
                                      ItemsSource="{Binding ExternalDocumentTypes}"
                                      SelectedIndex="{Binding SelectedExternalDocumentTypeIndex}"
                                      SelectedItem="{Binding SelectedExternalDocumentType}"
                                      ScrollViewer.CanContentScroll="True"
                                      Visibility="Visible"/>
                            <ComboBox x:Name="ComboBoxInternalDocumentTypes" 
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Right"
                                      Width="300"
                                      Margin="20 5"
                                      Height="40"
                                      FontFamily="Arial"
                                      FontSize="14"
                                      FontWeight="Bold"
                                      VerticalContentAlignment="Center"
                                      HorizontalContentAlignment="Center"
                                      ItemsSource="{Binding InternalDocumentTypes}"
                                      SelectedIndex="{Binding SelectedInternalDocumentTypeIndex}"
                                      SelectedItem="{Binding SelectedInternalDocumentType}"
                                      ScrollViewer.CanContentScroll="True"
                                      Visibility="Hidden"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                    <Grid x:Name="ExternalDocuments"
                          Grid.Row="3"
                          Margin="20 15 20 0"
                          Visibility="Visible">
                        <Grid>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40px"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" 
                                      Background="#FF6500CB"
                                      Margin="5">
                                    <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="220"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="130"/>
                                    </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Style="{StaticResource AdminDocumentTextblock}"
                                                   Foreground="White"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   Text="Рег. номер"
                                                   Padding="3 0"/>
                                        <TextBlock Grid.Column="1"
                                                   Style="{StaticResource AdminDocumentTextblock}"
                                                   Foreground="White"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   Text="Дата регистрации"
                                                   Padding="3 0"/>
                                        <TextBlock Grid.Column="2"
                                                   Style="{StaticResource AdminDocumentTextblock}"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   Foreground="White"
                                                   Text="Номер документа"
                                                   Padding="3 0"/>
                                        <TextBlock Grid.Column="3"
                                                   Style="{StaticResource AdminDocumentTextblock}"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   Foreground="White"
                                                   Text="Дата документа"
                                                   Padding="3 0"/>
                                        <TextBlock Grid.Column="4"
                                                   Style="{StaticResource AdminDocumentTextblock}"
                                                   Foreground="White"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   Text="Наименование документа"
                                                   Padding="3 0"/>
                                        <TextBlock Grid.Column="5"
                                                   Style="{StaticResource AdminDocumentTextblock}"
                                                   Foreground="White"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   Text="Контрагент"
                                                   Padding="3 0"/>
                                        <TextBlock Grid.Column="6"
                                                   Style="{StaticResource AdminDocumentTextblock}"
                                                   Foreground="White"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   Text="Адрес контрагента"
                                                   Padding="3 0"/>
                                        <TextBlock Grid.Column="7"
                                                   Style="{StaticResource AdminDocumentTextblock}"
                                                   Foreground="White"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   Text="Кому направлено"
                                                   Padding="3 0"/>
                                        <TextBlock Grid.Column="8"
                                                   Style="{StaticResource AdminDocumentTextblock}"
                                                   Foreground="White"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   Text="Дата направления"
                                                   Padding="3 0"/>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <ListView ItemsSource="{Binding ExternalDocumentsCollection}"
                                              SelectedItem="{Binding SelectedExternalDocument, Mode=TwoWay}">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Background="WhiteSmoke"
                                                      Margin="0 5 0 0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="80"/>
                                                        <ColumnDefinition Width="130"/>
                                                        <ColumnDefinition Width="100"/>
                                                        <ColumnDefinition Width="130"/>
                                                        <ColumnDefinition Width="200"/>
                                                        <ColumnDefinition Width="200"/>
                                                        <ColumnDefinition Width="220"/>
                                                        <ColumnDefinition Width="150"/>
                                                        <ColumnDefinition Width="130"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0"
                                                               Style="{StaticResource AdminDocumentTextblock}"
                                                               TextAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               Text="{Binding ExternalDocumentID}"
                                                               Padding="3 0"/>
                                                    <TextBlock Grid.Column="1"
                                                               Style="{StaticResource AdminDocumentTextblock}"
                                                               TextAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               Text="{Binding RegistrationDate, Converter={StaticResource DateConverter}}"
                                                               Padding="3 0"/>
                                                    <TextBlock Grid.Column="2"                                                               
                                                               Style="{StaticResource AdminDocumentTextblock}"
                                                               TextAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               Text="{Binding ExternalDocumentNumber}"
                                                               Padding="3 0"/>
                                                    <TextBlock Grid.Column="3"
                                                               Style="{StaticResource AdminDocumentTextblock}"
                                                               TextAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               Text="{Binding ExternalDocumentDate, Converter={StaticResource DateConverter}}"
                                                               Padding="3 0"/>
                                                    <TextBlock Grid.Column="4"
                                                               Style="{StaticResource AdminDocumentTextblock}"
                                                               TextAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               Text="{Binding ExternalDocumentTitle}"
                                                               Padding="3 0"/>
                                                    <TextBlock Grid.Column="5" 
                                                               Style="{StaticResource AdminDocumentTextblock}"
                                                               TextAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               Text="{Binding ContractorCompany.ContractorCompanyTitle}"
                                                               Padding="3 0"/>
                                                    <TextBlock Grid.Column="6"  
                                                               Style="{StaticResource AdminDocumentTextblock}"
                                                               TextAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               Text="{Binding ContractorCompany.ContractorCompanyAddress}"
                                                               Padding="3 0"/>
                                                    <StackPanel Grid.Column="7">
                                                        <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                                                   TextAlignment="Center"
                                                                   TextWrapping="Wrap"
                                                                   Text="{Binding EmployeeReceivedDocument.Department.DepartmentTitle}"
                                                                   Padding="3 0"/>
                                                        <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                                                   TextAlignment="Center"
                                                                   TextWrapping="Wrap"
                                                                   FontSize="10"
                                                                   Text="{Binding EmployeeReceivedDocument.Position}"
                                                                   Padding="3 0"/>
                                                        <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                                                   TextAlignment="Center"
                                                                   TextWrapping="Wrap"
                                                                   FontSize="11"
                                                                   Text="{Binding EmployeeReceivedDocument.EmployeeFullName}"
                                                                   Padding="3 0"/>
                                                    </StackPanel>
                                                    <TextBlock Grid.Column="8"
                                                               Style="{StaticResource AdminDocumentTextblock}"
                                                               TextAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               Text="{Binding SendingDate, Converter={StaticResource DateConverter}}"
                                                               Padding="3 0"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                    <Grid x:Name="InternalDocuments"
                          Grid.Row="3"
                          Margin="20 15 20 10"
                          Visibility="Hidden">
                        <Grid>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40px"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" 
                                      Background="#FF6500CB"
                                      Margin="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <!-- Рег.номер -->
                                            <ColumnDefinition Width="130"/>
                                            <!-- Дата регистрации -->
                                            <ColumnDefinition Width="100"/>
                                            <!-- Тип документа -->
                                            <ColumnDefinition Width="130"/>
                                            <!-- Дата документа -->
                                            <ColumnDefinition Width="150"/>
                                            <!-- Инициатор -->
                                            <ColumnDefinition Width="150"/>
                                            <!-- Наименование -->
                                            <ColumnDefinition Width="220"/>
                                            <!-- Краткое содержание -->
                                            <ColumnDefinition Width="150"/>
                                            <!-- Согласовавшее лицо -->
                                            <ColumnDefinition Width="150"/>
                                            <!-- Кому направлено на рассмотрение -->
                                            <ColumnDefinition Width="130"/>
                                            <!--Дата направления на рассмотрение-->
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Style="{StaticResource AdminDocumentTextblock}"
                                                   Foreground="White"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   Text="Рег. номер"
                                                   Padding="3 0"/>
                                        <TextBlock Grid.Column="1"
                                                   Style="{StaticResource AdminDocumentTextblock}"
                                                   Foreground="White"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   Text="Дата регистрации"
                                                   Padding="3 0"/>
                                        <TextBlock Grid.Column="2"
                                                   Style="{StaticResource AdminDocumentTextblock}"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   Foreground="White"
                                                   Text="Тип документа"
                                                   Padding="3 0"/>
                                        <TextBlock Grid.Column="3"
                                                   Style="{StaticResource AdminDocumentTextblock}"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   Foreground="White"
                                                   Text="Дата документа"
                                                   Padding="3 0"/>
                                        <TextBlock Grid.Column="4"
                                                   Style="{StaticResource AdminDocumentTextblock}"
                                                   Foreground="White"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   Padding="3 0"
                                                   Text="Инициатор / подписант"/>
                                        <TextBlock Grid.Column="5"
                                                   Style="{StaticResource AdminDocumentTextblock}"
                                                   Foreground="White"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   Padding="3 0"
                                                   Text="Наименование документа"/>
                                        <TextBlock Grid.Column="6"
                                                   Style="{StaticResource AdminDocumentTextblock}"
                                                   Foreground="White"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   Padding="3 0"
                                                   Text="Краткое содержание документа"/>
                                        <TextBlock Grid.Column="7"
                                                   Style="{StaticResource AdminDocumentTextblock}"
                                                   Foreground="White"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   Padding="3 0"
                                                   Text="Соласовавшее лицо"/>
                                        <TextBlock Grid.Column="8"
                                                   Style="{StaticResource AdminDocumentTextblock}"
                                                   Foreground="White"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   Padding="3 0"
                                                   Text="Кому направлено"/>
                                        <TextBlock Grid.Column="9"
                                                   Style="{StaticResource AdminDocumentTextblock}"
                                                   Foreground="White"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   Padding="3 0"
                                                   Text="Дата направления"/>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <ListView ItemsSource="{Binding InternalDocumentsCollection}"
                                              SelectedItem="{Binding SelectedInternalDocument, Mode=TwoWay}">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Background="WhiteSmoke"
                                                      Margin="0 5">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="80"/>
                                                        <!-- Рег.номер -->
                                                        <ColumnDefinition Width="130"/>
                                                        <!-- Дата регистрации -->
                                                        <ColumnDefinition Width="100"/>
                                                        <!-- Тип документа -->
                                                        <ColumnDefinition Width="130"/>
                                                        <!-- Дата документа -->
                                                        <ColumnDefinition Width="150"/>
                                                        <!-- Инициатор -->
                                                        <ColumnDefinition Width="150"/>
                                                        <!-- Наименование -->
                                                        <ColumnDefinition Width="220"/>
                                                        <!-- Краткое содержание -->
                                                        <ColumnDefinition Width="150"/>
                                                        <!-- Согласовавшее лицо -->
                                                        <ColumnDefinition Width="150"/>
                                                        <!-- Кому направлено на рассмотрение -->
                                                        <ColumnDefinition Width="130"/>
                                                        <!--Дата направления на рассмотрение-->
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0"
                                                               Style="{StaticResource AdminDocumentTextblock}"
                                                               TextAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               Padding="3 0"
                                                               Text="{Binding InternalDocumentRegistrationNumber}"/>
                                                    <TextBlock Grid.Column="1"
                                                               Style="{StaticResource AdminDocumentTextblock}"
                                                               TextAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               Padding="3 0"
                                                               Text="{Binding RegistrationDate, Converter={StaticResource DateConverter}}"/>
                                                    <TextBlock Grid.Column="2"                                                               
                                                               Style="{StaticResource AdminDocumentTextblock}"
                                                               TextAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               Padding="3 0"
                                                               Text="{Binding InternalDocumentType, Converter={StaticResource InternalDocumentTypeConverter}}"/>
                                                    <TextBlock Grid.Column="3"
                                                               Style="{StaticResource AdminDocumentTextblock}"
                                                               TextAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               Padding="3 0"
                                                               Text="{Binding InternalDocumentDate, Converter={StaticResource DateConverter}}"/>
                                                    <StackPanel Grid.Column="4">
                                                        <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                                                   TextAlignment="Center"
                                                                   TextWrapping="Wrap"
                                                                   FontSize="12"
                                                                   Padding="3 0"
                                                                   Text="{Binding Signatory.Department.DepartmentTitle}"/>
                                                        <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                                                   TextAlignment="Center"
                                                                   TextWrapping="Wrap"
                                                                   FontSize="10"
                                                                   Padding="3 0"
                                                                   Text="{Binding Signatory.Position}"/>
                                                        <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                                                   TextAlignment="Center"
                                                                   TextWrapping="Wrap"
                                                                   FontSize="11"
                                                                   Padding="3 0"
                                                                   Text="{Binding Signatory.EmployeeFullName}"/>
                                                    </StackPanel>
                                                    <TextBlock Grid.Column="5"
                                                               Style="{StaticResource AdminDocumentTextblock}"
                                                               TextAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               Padding="3 0"
                                                               Text="{Binding InternalDocumentTitle}"/>
                                                    <TextBlock Grid.Column="6"
                                                               Style="{StaticResource AdminDocumentTextblock}"
                                                               TextAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               Padding="3 0"
                                                               Text="{Binding InternalDocumentContent}"/>
                                                    <StackPanel Grid.Column="7">
                                                        <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                                                   TextAlignment="Center"
                                                                   TextWrapping="Wrap"
                                                                   Padding="3 0"
                                                                   Text="{Binding ApprovedManager.Department.DepartmentTitle}"/>
                                                        <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                                                   TextAlignment="Center"
                                                                   TextWrapping="Wrap"
                                                                   FontSize="10"
                                                                   Padding="3 0"
                                                                   Text="{Binding ApprovedManager.Position}"/>
                                                        <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                                                   TextAlignment="Center"
                                                                   TextWrapping="Wrap"
                                                                   FontSize="11"
                                                                   Padding="3 0"
                                                                   Text="{Binding ApprovedManager.EmployeeFullName}"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="8">
                                                        <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                                                   TextAlignment="Center"
                                                                   TextWrapping="Wrap"
                                                                   Padding="3 0"
                                                                   Text="{Binding EmployeeRecievedDocument.Department.DepartmentTitle}"/>
                                                        <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                                                   TextAlignment="Center"
                                                                   TextWrapping="Wrap"
                                                                   FontSize="10"
                                                                   Padding="3 0"
                                                                   Text="{Binding EmployeeRecievedDocument.Position}"/>
                                                        <TextBlock Style="{StaticResource AdminDocumentTextblock}"
                                                                   TextAlignment="Center"
                                                                   TextWrapping="Wrap"
                                                                   FontSize="11"
                                                                   Padding="3 0"
                                                                   Text="{Binding EmployeeRecievedDocument.EmployeeFullName}"/>
                                                    </StackPanel>
                                                    <TextBlock Grid.Column="9"
                                                               Style="{StaticResource AdminDocumentTextblock}"
                                                               TextAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               Padding="3 0"
                                                               Text="{Binding SendingDate, Converter={StaticResource DateConverter}}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>

                </Grid>
            </Grid>
            <Grid Grid.Column="2"
                  Margin="20">
                <Calendar HorizontalAlignment="Center" 
                          VerticalAlignment="Top"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="2" Background="Black">

        </Grid>
    </Grid>
</Window>