<Window x:Class="AppDocumentManagment.UI.Views.DocumentRegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppDocumentManagment.UI.Views"
        mc:Ignorable="d"
        Title="АИС Документооборот"  
        MinHeight="450" 
        MinWidth="1300" 
        Height="800"
        Width="1300"
        Icon="/Resources/Images/AppIcon.png" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40px"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40px"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF7D00FF" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Label x:Name="GreetingLabel"
                   Content="Панель регистрации документов" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Center" 
                   FontFamily="Arial" 
                   FontSize="14" 
                   FontWeight="Bold"
                   Padding="20,0"
                   Foreground="WhiteSmoke"/>
            <Label x:Name="CurrentUserName" 
                   Content="Сотрудник"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   FontFamily="Arial" 
                   FontSize="14" 
                   FontWeight="Bold"
                   Margin="120, 0"
                   Foreground="WhiteSmoke"/>
            <Button x:Name="ExitBtn"
                    Content="Выйти"
                    HorizontalAlignment="Right"
                    Style="{StaticResource Buttons}"
                    FontFamily="Arial" 
                    FontSize="14" 
                    Margin="10, 5"
                    Padding="10, 0"
                    FontWeight="Bold"
                    Command="{Binding IExit}"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="170"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="210"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="1"/>
                        <GradientStop Color="#FF7F00FF" Offset="0"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="75"/>
                    <RowDefinition Height="75"/>
                    <RowDefinition Height="75"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Grid.Row="0" 
                        x:Name="NewUserRegistredBtn"
                        Style="{StaticResource Buttons}"
                        Padding="10"
                        Margin="10"
                        Command="{Binding IGetRegistratedUsersList}">
                    <TextBlock TextAlignment="Center"> Поступившие <LineBreak/> документы</TextBlock>
                </Button>
                <Button Grid.Row="1"
                        Style="{StaticResource Buttons}"
                        Padding="10"
                        Margin="10"
                        Command="{Binding IGetAllUsersList}">
                    <TextBlock TextAlignment="Center"> Внутренние <LineBreak/> документы</TextBlock>
                </Button>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="1"/>
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="#FF121212" Offset="0.796"/>
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80px"/>
                        <RowDefinition Height="40px"/>
                        <RowDefinition Height="60px"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" 
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               FontFamily="Arial"
                               FontSize="20"
                               FontWeight="DemiBold"
                               Margin="20, 0"
                               Text="{Binding TextBlockTitle}"/>
                    <Button HorizontalAlignment="Right"
                            Padding="10"
                            Margin="0 10 20 10"
                            Width="180"
                            Style="{StaticResource Buttons}"
                            Command="{Binding ICreateNewDocument}">
                        <TextBlock TextAlignment="Center"> Зарегистрировать <LineBreak/> документ</TextBlock>
                    </Button>

                    <TextBox Grid.Row="1" 
                             x:Name="SearchStringBox" 
                             Style="{StaticResource TaskListSearchBox}"
                             Margin="15 0"
                             FontFamily="Arial"
                             FontSize="14"
                             Text="{Binding SearchString}"
                             TextChanged="SearchTextBox_TextChanged"/>
                    <Label Grid.Row="1"
                           IsHitTestVisible="False" 
                           Content="Поиск по наименованию документа или наименованию контрагента..."
                           VerticalAlignment="Center"
                           Margin="18 0"
                           Foreground="Gray"
                           FontFamily="Arial"
                           FontSize="14"
                           Visibility="{Binding Text.IsEmpty, ElementName=SearchStringBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <Button Grid.Row="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0 0 25 0"
                            Padding="10"
                            Background="White"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Style="{StaticResource SearchButton}"
                            Height="25"
                            Width="25"
                            Command="{Binding IFindItem}">
                        <Image Width="25" Height="25" Source="/Resources/Images/SearchIcon.png"/>
                    </Button>
                    <Grid Grid.Row="2"
                          Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Выбрать тип документа"
                               FontFamily="Arial"
                               FontSize="14"
                               FontWeight="Bold"
                               Margin="20 5"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>
                            <ComboBox x:Name="ComboBoxDepartments" 
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Right"
                                      Width="300"
                                      Margin="20 5"
                                      Height="40"
                                      FontFamily="Arial"
                                      FontSize="14"
                                      FontWeight="Bold"
                                      VerticalContentAlignment="Center"
                                      HorizontalContentAlignment="Center"
                                      ItemsSource="{Binding DocumentTypes}"
                                      SelectedIndex="{Binding SelectedDocumentTypeIndex}"
                                      SelectedItem="{Binding SelectedDocumentType}"
                                      ScrollViewer.CanContentScroll="True"/>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="3"
                          Margin="20 15 20 10">
                        <Grid>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40px"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" 
                                      Background="#FF6500CB"
                                      Margin="5">
                                    <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Style="{StaticResource AdminDocumentTextblock}"
                                               Foreground="White"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"
                                               Text="Рег. номер"/>
                                    <TextBlock Grid.Column="1"
                                               Style="{StaticResource AdminDocumentTextblock}"
                                               Foreground="White"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"
                                               Text="Дата регистрации"/>
                                    <TextBlock Grid.Column="2"
                                               Style="{StaticResource AdminDocumentTextblock}"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"
                                               Foreground="White"
                                               Text="Номер документа"/>
                                    <TextBlock Grid.Column="3"
                                               Style="{StaticResource AdminDocumentTextblock}"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"
                                               Foreground="White"
                                               Text="Дата документа"/>
                                    <TextBlock Grid.Column="4"
                                               Style="{StaticResource AdminDocumentTextblock}"
                                               Foreground="White"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"
                                               Text="Наименование документа"/>
                                    <TextBlock Grid.Column="5"
                                               Style="{StaticResource AdminDocumentTextblock}"
                                               Foreground="White"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"
                                               Text="Контрагент"/>
                                    <TextBlock Grid.Column="6"
                                               Style="{StaticResource AdminDocumentTextblock}"
                                               Foreground="White"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"
                                               Text="Кому направлено"/>
                                    <TextBlock Grid.Column="7"
                                               Style="{StaticResource AdminDocumentTextblock}"
                                               Foreground="White"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"
                                               Text="Дата направления"/>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <ListView ItemsSource="{Binding DocumentsCollection}"
                                              SelectedItem="{Binding SelectedDocument, Mode=TwoWay}">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Background="WhiteSmoke"
                                                      Margin="0 5">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="80"/>
                                                        <ColumnDefinition Width="80"/>
                                                        <ColumnDefinition Width="80"/>
                                                        <ColumnDefinition Width="80"/>
                                                        <ColumnDefinition Width="150"/>
                                                        <ColumnDefinition Width="150"/>
                                                        <ColumnDefinition Width="100"/>
                                                        <ColumnDefinition Width="100"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0"
                                                               Style="{StaticResource AdminDocumentTextblock}"
                                                               TextAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               Text="{Binding DocumentID}"/>
                                                    <TextBlock Grid.Column="1"
                                                               Style="{StaticResource AdminDocumentTextblock}"
                                                               TextAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               Text="{Binding RegistrationDate}"/>
                                                    <TextBlock Grid.Column="2"                                                               
                                                               Style="{StaticResource AdminDocumentTextblock}"
                                                               TextAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               Text="{Binding DocumentNumber}"/>
                                                    <TextBlock Grid.Column="3"
                                                               Style="{StaticResource AdminDocumentTextblock}"
                                                               TextAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               Text="{Binding DocumentDate}"/>
                                                    <TextBlock Grid.Column="4"
                                                               Style="{StaticResource AdminDocumentTextblock}"
                                                               TextAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               Text="{Binding DocumentTitle}"/>
                                                    <TextBlock Grid.Column="5"
                                                               Style="{StaticResource AdminDocumentTextblock}"
                                                               TextAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               Text="{Binding ContractorCompany.ContractorCompanyTitle}"/>
                                                    <TextBlock Grid.Column="6"
                                                               Style="{StaticResource AdminDocumentTextblock}"
                                                               TextAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               Text="{Binding EmployeeReceivedDocument.EmployeeShortName}"/>
                                                    <TextBlock Grid.Column="7"
                                                               Style="{StaticResource AdminDocumentTextblock}"
                                                               TextAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               Text="{Binding SendingDate}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Column="2"
                  Margin="20">
                <Calendar HorizontalAlignment="Center" 
                          VerticalAlignment="Top"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="2" Background="Black">

        </Grid>
    </Grid>
</Window>