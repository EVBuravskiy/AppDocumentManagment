<Window x:Class="AppDocumentManagment.UI.Views.DepartmentsEmployeesPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppDocumentManagment.UI.Views"
        xmlns:uc="clr-namespace:AppDocumentManagment.UI.Views.UserControllers"
        mc:Ignorable="d"
        Title="АИС Документооборот"  
        MinHeight="450" 
        MinWidth="1120" 
        Height="800"
        Width="1200"
        Icon="/Resources/Images/AppIcon.png" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40px"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40px"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF7D00FF" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Label x:Name="GreetingLabel"
                   Content="Учет кадров" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Center" 
                   FontFamily="Arial" 
                   FontSize="14" 
                   FontWeight="Bold"
                   Padding="20,0"
                   Foreground="WhiteSmoke"/>
            <Label x:Name="CurrentUserName" 
                   Content="Сотрудник"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   FontFamily="Arial" 
                   FontSize="14" 
                   FontWeight="Bold"
                   Margin="100, 0"
                   Foreground="WhiteSmoke"/>
            <Button x:Name="ExitBtn"
                    Content="Выйти"
                    HorizontalAlignment="Right"
                    Style="{StaticResource Buttons}"
                    FontFamily="Arial" 
                    FontSize="14" 
                    Margin="10, 5"
                    Padding="10, 0"
                    FontWeight="Bold"
                    Command="{Binding IExit}"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="White" Offset="0"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="370"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" 
                        Orientation="Vertical">
                <StackPanel.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="1"/>
                        <GradientStop Color="#FF7F00FF" Offset="0"/>
                    </LinearGradientBrush>
                </StackPanel.Background>
                <Button x:Name="DepartmentBtn"
                        Content="Отделы/Департаменты"    
                        Style="{StaticResource Buttons}"
                        FontFamily="Arial" 
                        FontSize="14" 
                        FontWeight="Bold"
                        Padding="10"
                        Margin="5"
                        Command="{Binding ISelectDepartments}"/>
                <Button x:Name="EmployeeBtn"
                        Content="Сотрудники"    
                        Style="{StaticResource Buttons}"
                        FontFamily="Arial" 
                        FontSize="14" 
                        FontWeight="Bold"
                        Padding="10"
                        Margin="5"
                        Command="{Binding ISelectEmployees}"/>
            </StackPanel>
            <Grid Grid.Column="1">
                <Border BorderThickness="2" 
                        BorderBrush="Transparent"
                        CornerRadius="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40px"/>
                            <RowDefinition Height="40px"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Label x:Name="LabelList"   
                       Grid.Row="0" 
                       Content="{Binding LabelListContent}"
                       FontFamily="Arial" 
                       FontSize="14" 
                       FontWeight="Bold"
                       Padding="15 0"
                       VerticalAlignment="Center"/>
                        <Button Content="{Binding AddBtnContent}"
                                Style="{StaticResource Buttons}"
                                HorizontalAlignment="Right"
                                Margin="5"
                                Padding="10,0"
                                Width="180"
                                FontFamily="Arial" 
                                FontSize="14" 
                                FontWeight="Bold"
                                Command="{Binding IAddItem}"/>
                        <TextBox x:Name="SearchStringBox" 
                                 Grid.Row="1"
                                 Style="{StaticResource TaskListSearchBox}"
                                 Margin="15 0"
                                 FontFamily="Arial"
                                 FontSize="14"
                                 Text="{Binding SearchString}"
                                 TextChanged="SearchTextBox_TextChanged"/>
                        <Label IsHitTestVisible="False" 
                               Content="Поиск..."
                               Grid.Row="1"
                               VerticalAlignment="Center"
                               Margin="18 0"
                               Foreground="Gray"
                               FontFamily="Arial"
                               FontSize="14"
                               Visibility="{Binding Text.IsEmpty, ElementName=SearchStringBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <Button Grid.Row="1"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0 0 25 0"
                                Padding="10"
                                Background="White"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Style="{StaticResource SearchButton}"
                                Height="25"
                                Width="25"
                                Command="{Binding IFindItem}">
                            <Image Width="20" Height="20" Source="/Resources/Images/SearchIcon.png"/>
                        </Button>
                        <ListView x:Name="DepartmentList" 
                          Grid.Row="2"
                          Margin="5 20 5 0"
                          Visibility="Visible"
                          BorderThickness="0"
                          ItemsSource="{Binding Departments}"
                          SelectedItem="{Binding SelectedDepartment, Mode=TwoWay}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <uc:DepartmentCardListItem/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <ListView x:Name="EmployeeList"
                                  Grid.Row="2"
                                  Margin="5 20 5 0"
                                  Visibility="Hidden"
                                  BorderThickness="0"
                                  ItemsSource="{Binding Employees}"
                                  SelectedItem="{Binding SelectedEmployee, Mode=TwoWay}" Cursor="">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <uc:EmployeeCardListItem/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Border>
            </Grid>
            <Grid Grid.Column="2">
                <Border BorderThickness="2" 
                        BorderBrush="Transparent"
                        CornerRadius="2">
                    <Grid>
                        <!-- Department Info -->
                        <Grid x:Name="DetailDepartmentInfo"
                          Visibility="Visible">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="380"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="50px"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" 
                                        Orientation="Vertical">
                                <Grid>
                                    <Label VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           Content="{Binding SelectedDepartment.DepartmentTitle}"
                                           FontFamily="Arial"
                                           FontSize="16"
                                           FontWeight="DemiBold"/>
                                    <Button x:Name="EditDepartment"
                                            Content="Редактировать отдел"
                                            Style="{StaticResource Buttons}"
                                            FontFamily="Arial" 
                                            FontSize="14" 
                                            FontWeight="Bold"
                                            Padding="10"
                                            Margin="10 5 10 5"
                                            HorizontalAlignment="Right"
                                            Command="{Binding IEditSelectedDepartment}"/>
                                </Grid>
                                <!--Deputy General Director-->
                                <Label VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Content="Заместитель генерального директора"
                                       FontFamily="Arial"
                                       FontSize="20"
                                       FontWeight="DemiBold"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0"
                                            BorderThickness="5"
                                            BorderBrush="DimGray"
                                            CornerRadius="2"
                                            Width="100">
                                        <Image Width="100"
                                               Height="100"
                                               Source="{Binding DeputyGeneralDirector.EmployeeImagePath,
                                            FallbackValue={StaticResource DefaultContactImage},
                                            TargetNullValue={StaticResource DefaultContactImage}}"
                                               Stretch="UniformToFill"/>
                                    </Border>
                                    <StackPanel Orientation="Vertical" 
                                                Grid.Column="1">
                                        <TextBlock Grid.Row="1"
                                                   Padding="10, 0"
                                                   FontFamily="Arial"
                                                   FontSize="20"
                                                   HorizontalAlignment="Left"
                                                   Text="{Binding DeputyGeneralDirector.Position}"/>
                                        <TextBlock Margin="0 20 0 5"
                                                   Padding="10, 0"
                                                   FontFamily="Arial"
                                                   FontSize="24"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Left"
                                                   Text="{Binding DeputyGeneralDirector.EmployeeLastName}"/>
                                        <StackPanel Orientation="Horizontal" 
                                                    HorizontalAlignment="Left">
                                            <TextBlock Padding="10, 0"
                                                       FontFamily="Arial"
                                                       FontSize="16"
                                                       Text="{Binding DeputyGeneralDirector.EmployeeFirstName}"/>
                                            <TextBlock Padding="10, 0"
                                                       FontFamily="Arial"
                                                       FontSize="16"
                                                       Text="{Binding DeputyGeneralDirector.EmployeeMiddleName}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                                <!--Header of Department -->
                                <Label VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Content="Руководитель отдела"
                                       FontFamily="Arial"
                                       FontSize="20"
                                       FontWeight="DemiBold"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0"
                                            BorderThickness="5"
                                            BorderBrush="DimGray"
                                            CornerRadius="2"
                                            Width="100">
                                        <Image Width="100"
                                               Height="100"
                                               Source="{Binding HeaderOfDepartment.EmployeeImagePath,
                                            FallbackValue={StaticResource DefaultContactImage},
                                            TargetNullValue={StaticResource DefaultContactImage}}"
                                               Stretch="UniformToFill"/>
                                    </Border>
                                    <StackPanel Orientation="Vertical" 
                                                Grid.Column="1">
                                        <TextBlock Grid.Row="1"
                                                   Padding="10, 0"
                                                   FontFamily="Arial"
                                                   FontSize="20"
                                                   HorizontalAlignment="Left"
                                                   Text="{Binding HeaderOfDepartment.Position}"/>
                                        <TextBlock Margin="0 20 0 5"
                                                   Padding="10, 0"
                                                   FontFamily="Arial"
                                                   FontSize="24"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Left"
                                                   Text="{Binding HeaderOfDepartment.EmployeeLastName}"/>
                                        <StackPanel Orientation="Horizontal" 
                                                    HorizontalAlignment="Left">
                                            <TextBlock Padding="10, 0"
                                                       FontFamily="Arial"
                                                       FontSize="16"
                                                       Text="{Binding HeaderOfDepartment.EmployeeFirstName}"/>
                                            <TextBlock Padding="10, 0"
                                                       FontFamily="Arial"
                                                       FontSize="16"
                                                       Text="{Binding HeaderOfDepartment.EmployeeMiddleName}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" 
                                       VerticalAlignment="Center"
                                       Content="Текущая численность отдела:"
                                       FontFamily="Arial"
                                       FontSize="20"
                                       FontWeight="DemiBold"
                                       Margin="5 20 0 5"/>
                                    <Label Grid.Column="2" 
                                       VerticalAlignment="Center"
                                       Content="{Binding DepartmentSize}"
                                       FontFamily="Arial"
                                       FontSize="20"
                                       FontWeight="DemiBold"
                                       Margin="5 20 0 5"/>
                                </Grid>
                            </StackPanel>
                            <!-- Performers List -->
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="60"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" 
                                       VerticalAlignment="Center"
                                       Content="Сотрудники отдела"
                                       FontFamily="Arial"
                                       FontSize="20"
                                       FontWeight="DemiBold"
                                       Margin="5 5 5 5"/>
                                <ListView x:Name="PerformersList"
                                          Grid.Row="2"
                                          Margin="5 0 5 10"
                                          Visibility="Visible"
                                          HorizontalAlignment="Stretch"
                                          BorderBrush="DimGray"
                                          BorderThickness="1"
                                          ItemsSource="{Binding PerformersOfDepartment}"
                                          SelectedItem="{Binding SelectedEmployee, Mode=TwoWay}"
                                          ScrollViewer.CanContentScroll="True">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="50px"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid Grid.Column="0">
                                                        <Border BorderBrush="DimGray"
                                                            BorderThickness="2"
                                                            CornerRadius="2">
                                                            <Image Width="50"
                                                           Height="50"
                                                           Source="{Binding EmployeeImagePath,
                                                        FallbackValue={StaticResource DefaultContactImage},
                                                        TargetNullValue={StaticResource DefaultContactImage}}"
                                                           Stretch="UniformToFill"/>
                                                        </Border>
                                                    </Grid>
                                                    <Grid Grid.Column="1">
                                                        <StackPanel Orientation="Vertical">
                                                            <TextBlock Grid.Row="1"
                                                                   Margin="0 10 0 5"
                                                                   Padding="10, 0"
                                                                   FontFamily="Arial"
                                                                   FontSize="14"
                                                                   FontWeight="Bold"
                                                                   HorizontalAlignment="Left"
                                                                   Text="{Binding Position}"/>
                                                            <TextBlock Padding="10, 0"
                                                                   FontFamily="Arial"
                                                                   FontSize="14"
                                                                   FontWeight="Bold"
                                                                   HorizontalAlignment="Left"
                                                                   Text="{Binding EmployeeFullName}"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Grid>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Grid>

                            <Grid Grid.Row="2">
                                <Button x:Name="EditEmployee"
                                        Content="Добавить нового сотрудника"
                                        Style="{StaticResource Buttons}"
                                        FontFamily="Arial" 
                                        FontSize="14" 
                                        FontWeight="Bold"
                                        Padding="10"
                                        Margin="10 5 10 5"
                                        HorizontalAlignment="Right"
                                        Command="{Binding IAddNewEmployee}"/>
                            </Grid>
                        </Grid>
                        <!-- Employee Info -->
                        <Grid x:Name="EmployeeDetailInfo"
                          Visibility="Hidden">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="60"/>
                                <RowDefinition Height="250"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="60"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Content="Информация о сотруднике"
                                   FontFamily="Arial"
                                   FontSize="20"
                                   FontWeight="DemiBold"/>
                            <Grid Grid.Row="1">
                                <Border Grid.Column="0"
                                        BorderThickness="5"
                                        BorderBrush="DimGray"
                                        CornerRadius="2"
                                        Width="250"
                                        VerticalAlignment="Top">
                                    <Image Width="250"
                                               Height="250"
                                               Source="{Binding SelectedEmployee.EmployeeImagePath,
                                            FallbackValue={StaticResource DefaultContactImage},
                                            TargetNullValue={StaticResource DefaultContactImage}}"
                                               Stretch="UniformToFill"/>
                                </Border>
                            </Grid>
                            <Grid Grid.Row="2">
                                <StackPanel Orientation="Vertical" 
                                                Grid.Column="1">
                                    <TextBlock Margin="0 20 0 0"
                                                   Padding="10, 0"
                                                   FontFamily="Arial"
                                                   FontSize="24"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"
                                                   Text="{Binding SelectedEmployee.EmployeeLastName}"/>
                                    <StackPanel Orientation="Horizontal" 
                                                    HorizontalAlignment="Center">
                                        <TextBlock Padding="10, 0"
                                                   FontFamily="Arial"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Text="{Binding SelectedEmployee.EmployeeFirstName}"/>
                                        <TextBlock Padding="10, 0"
                                                   FontFamily="Arial"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Text="{Binding SelectedEmployee.EmployeeMiddleName}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" 
                                                HorizontalAlignment="Center"
                                                Margin="0 20 0 0">
                                        <TextBlock Padding="10, 0"
                                                   FontFamily="Arial"
                                                   FontSize="16"
                                                   HorizontalAlignment="Center"
                                                   Text="Отдел/Департамент: "/>
                                        <TextBlock Padding="10, 0"
                                                   FontFamily="Arial"
                                                   FontSize="16"
                                                   HorizontalAlignment="Center"
                                                   Text="{Binding SelectedEmployee.Department.DepartmentTitle}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" 
                                                HorizontalAlignment="Center"
                                                Margin="0 20 0 0">
                                        <TextBlock Padding="10, 0"
                                                   FontFamily="Arial"
                                                   FontSize="16"
                                                   HorizontalAlignment="Center"
                                                   Text="Занимаемая должность: "/>
                                        <TextBlock Padding="10, 0"
                                                   FontFamily="Arial"
                                                   FontSize="16"
                                                   HorizontalAlignment="Center"
                                                   Text="{Binding SelectedEmployee.Position}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Row="3">
                                <Button x:Name="EditThisEmployee"
                                        Content="Редактировать данные сотрудника"
                                        Style="{StaticResource Buttons}"
                                        FontFamily="Arial" 
                                        FontSize="14" 
                                        FontWeight="Bold"
                                        Padding="10"
                                        Margin="10 5 10 5"
                                        HorizontalAlignment="Left"
                                        Command="{Binding IUpdateEmployee}"/>
                                <Button x:Name="DeleteEmployee"
                                        Content="Удалить данного сотрудника"
                                        Style="{StaticResource Buttons}"
                                        FontFamily="Arial" 
                                        FontSize="14" 
                                        FontWeight="Bold"
                                        Padding="10"
                                        Margin="10 5 10 5"
                                        HorizontalAlignment="Right"
                                        Command="{Binding IRemoveEmployee}"/>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        <Grid Grid.Row="2" Background="Black"/>
    </Grid>
</Window>
