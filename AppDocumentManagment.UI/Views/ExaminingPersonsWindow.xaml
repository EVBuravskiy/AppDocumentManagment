<Window x:Class="AppDocumentManagment.UI.Views.ExaminingPersonsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppDocumentManagment.UI.Views"
        mc:Ignorable="d"
        Title="АИС Документооборот"  
        Height="860"
        Width="600"
        Icon="/Resources/Images/AppIcon.png" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0.778"/>
                <GradientStop Color="White" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="40px"/>
            <RowDefinition Height="700px"/>
            <RowDefinition Height="60px"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF7D00FF" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Label Grid.Row="0" 
                   x:Name="GreetingLabel"
                   Content="Руководство организации" 
                   HorizontalAlignment="Left" 
                   Padding="20,0"
                   Style="{StaticResource TopPanelLabel}"
                   Foreground="WhiteSmoke"/>
            <Button x:Name="ExitBtn"
                    Content="Выйти"
                    HorizontalAlignment="Right"
                    Style="{StaticResource Buttons}"
                    Margin="10, 5"
                    Padding="20, 0"
                    Command="{Binding IExit}"/>
        </Grid>
        <Grid Grid.Row="1"
              Margin="0 10 0 0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40px"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <TextBox x:Name="SearchStringBox" 
                             Style="{StaticResource TaskListSearchBox}"
                             Margin="20 5 20 5"
                             Padding="10 0 0 0"
                             FontFamily="Arial"
                             FontSize="14"
                             Text="{Binding SearchString}"
                             TextChanged="SearchTextBox_TextChanged"/>
                    <Label IsHitTestVisible="False" 
                           Content="Поиск..."
                           VerticalAlignment="Center"
                           Margin="30 0"
                           Foreground="Gray"
                           FontFamily="Arial"
                           FontSize="14"
                           Visibility="{Binding Text.IsEmpty, ElementName=SearchStringBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <Button HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0 0 30 0"
                            Padding="10"
                            Background="White"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Style="{StaticResource SearchButton}"
                            Height="25"
                            Width="25">
                        <Image Width="25" Height="25" Source="/Resources/Images/SearchIcon.png"/>
                    </Button>
                </Grid>
                <Grid Grid.Row="1"
                      Margin="20 10">
                    <ListView ItemsSource="{Binding Managers}"
                              SelectedItem="{Binding SelectedManager}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="2"
                                        BorderBrush="DimGray"
                                        CornerRadius="5"
                                        Background="WhiteSmoke"
                                        Padding="5"
                                        Width="500">
                                    <Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100px"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid Grid.Column="0">
                                                    <Image Width="100"
                                                           Height="100"
                                                           Source="{Binding EmployeeImagePath,
                                                        FallbackValue={StaticResource DefaultContactImage},
                                                        TargetNullValue={StaticResource DefaultContactImage}}"
                                                           Stretch="UniformToFill"/>
                                            </Grid>
                                            <Grid Grid.Column="1">
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Grid.Row="1"
                                                               Margin="0 10 0 5"
                                                               Padding="10, 0"
                                                               FontFamily="Arial"
                                                               FontSize="14"
                                                               FontWeight="Bold"
                                                               HorizontalAlignment="Left"
                                                               Text="{Binding Department.DepartmentTitle}"/>
                                                    <TextBlock Grid.Row="1"
                                                               Margin="0 10 0 5"
                                                               Padding="10, 0"
                                                               FontFamily="Arial"
                                                               FontSize="14"
                                                               FontWeight="Bold"
                                                               HorizontalAlignment="Left"
                                                               Text="{Binding Position}"/>
                                                    <TextBlock Padding="10, 0"
                                                               FontFamily="Arial"
                                                               FontSize="14"
                                                               FontWeight="Bold"
                                                               HorizontalAlignment="Left"
                                                               Text="{Binding EmployeeFullName}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="2"
              Margin="0 0 0 0"
              Background="Black">
            <Button Style="{StaticResource Buttons}"
                    Width="250"
                    Height="40"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Content="Отправить на рассмотрение"
                    Padding="10 10"
                    Margin="20 0"
                    Command="{Binding ISendDocument}"/>
        </Grid>
    </Grid>
</Window>
