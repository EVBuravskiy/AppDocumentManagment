<Window x:Class="AppDocumentManagment.UI.Views.ProductionTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppDocumentManagment.UI.Views"
        mc:Ignorable="d"
        Title="АИС Документооборот"  
        Height="900"
        Width="600"
        Icon="/Resources/Images/AppIcon.png" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0.778"/>
                <GradientStop Color="White" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="60px"/>
            <RowDefinition Height="200px"/>
            <RowDefinition Height="180px"/>
            <RowDefinition Height="180px"/>
            <RowDefinition Height="160px"/>
            <RowDefinition Height="60px"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF7D00FF" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Label Grid.Row="0" 
                   x:Name="GreetingLabel"
                   Content="Панель редактирования задачи" 
                   HorizontalAlignment="Left" 
                   Padding="20,0"
                   Style="{StaticResource TopPanelLabel}"
                   Foreground="WhiteSmoke"/>
            <Button x:Name="ExitBtn"
                    Content="Выйти"
                    HorizontalAlignment="Right"
                    Style="{StaticResource Buttons}"
                    Margin="10, 5"
                    Padding="20, 0"
                    Command="{Binding IExit}"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="TaskTitle" 
                                 Grid.Column="0"
                                 Style="{StaticResource ItemTitleBox}"
                                 VerticalAlignment="Top"
                                 FontSize="14"
                                 Text="{Binding ProductionTaskTitle}"
                                 Background="WhiteSmoke"
                                 TextWrapping="Wrap"
                                 SpellCheck.IsEnabled="True"
                                 ToolTip="Введите наименование задачи..."/>
                        <Label IsHitTestVisible="False" 
                               Grid.Column="0"
                               Foreground="DimGray"
                               Content="Введите наименование задачи..."
                               VerticalAlignment="Top"
                               FontSize="14"
                               Visibility="{Binding Text.IsEmpty, ElementName=TaskTitle, Converter={StaticResource BooleanToVisibilityConverter}}"
                               Margin="30 10"/>
                        <CheckBox Grid.Column="1"
                                  HorizontalAlignment="Right" 
                                  Margin="0,0,20,0"
                                  VerticalAlignment="Center"
                                  IsChecked="{Binding IsImportant, Mode=TwoWay}">
                            <TextBlock Grid.Column="1"
                                       Margin="5 0 0 0"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Foreground="Red"
                                       Text="ВАЖНО!!!"/>
                        </CheckBox>
                    </Grid>
                    <Grid Grid.Row="1" 
                          x:Name="TaskDocument"
                          Visibility="Visible">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Margin="27 0 0 0"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Text="Документ к заданию:"/>
                        <Button Grid.Column="1" 
                                Background="Transparent"
                                BorderThickness="0"
                                HorizontalContentAlignment="Center">
                            <TextBlock Text="{Binding DocumentTitle}"
                                       TextWrapping="Wrap"
                                       FontSize="14"
                                       FontWeight="Bold"/>
                        </Button>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="180"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Margin="27 0 0 0"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Text="Введите или выберите дату срока выполнения задания:"/>
                        <DatePicker Grid.Column="1"
                                    x:Name="TaskDueDate"
                                    Background="White"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    BorderBrush="Transparent"
                                    FontFamily="Futura Now"
                                    FontSize="13"
                                    FontWeight="DemiBold"
                                    HorizontalContentAlignment="Left"
                                    Margin="0 0,20,0"
                                    Padding="10 0"
                                    SelectedDateFormat="Short" IsDropDownOpen="False"
                                    SelectedDate="{Binding ProductionTaskDueDate}"/>
                    </Grid>
                    <TextBox x:Name="TaskDescription" 
                             Grid.Row="3"
                             Style="{StaticResource ItemTitleBox}"
                             VerticalAlignment="Top"
                             FontSize="14"
                             Text="{Binding ProductionTaskDescription}"
                             Background="WhiteSmoke"
                             SpellCheck.IsEnabled="True"
                             TextWrapping="Wrap"
                             Height="70"
                             ToolTip="Введите описание задачи"
                             />
                    <Label IsHitTestVisible="False" 
                           Grid.Row="3"
                           Foreground="DimGray"
                           Content="Введите описание задачи..."
                           VerticalAlignment="Center"
                           FontSize="14"
                           Visibility="{Binding Text.IsEmpty, ElementName=TaskDescription, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="30 10"/>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <StackPanel Orientation="Vertical">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="180"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="SubTask" 
                             Grid.Column="0"
                             Style="{StaticResource ItemTitleBox}"
                             VerticalAlignment="Top"
                             FontSize="14"
                             Text="{Binding SubProductionTaskTitle}"
                             Background="WhiteSmoke"
                             SpellCheck.IsEnabled="True"
                             TextWrapping="Wrap"
                             ToolTip="Введите описание задачи"
                             />
                <Label IsHitTestVisible="False" 
                           Grid.Column="0"
                           Foreground="DimGray"
                           Content="Введите подзадачу..."
                           VerticalAlignment="Top"
                           FontSize="14"
                           Visibility="{Binding Text.IsEmpty, ElementName=SubTask, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="30,10,30,0"/>
                <Grid Grid.Column="1">
                    <Button Style="{StaticResource Buttons}"
                            Height="40"
                            Width="150"
                            Padding="0"
                            Margin="0 0 20 0"
                            HorizontalAlignment="Right"
                            Command="{Binding IAddNewSubTask}">
                        <Grid>
                            <TextBlock x:Name="ButtonAddSubTask"
                                   TextAlignment="Center"
                                   Visibility="Visible">
                                Добавить <LineBreak/> подзадачу</TextBlock>
                        </Grid>
                    </Button>
                </Grid>
            </Grid>
                <Grid>
                    <ListView Margin="20 0" 
                              MinHeight="120"
                              ItemsSource="{Binding ProductionSubTasks}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ProductionSubTaskDescription}"
                                           TextWrapping="Wrap"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="3">
            <StackPanel Orientation="Vertical">
                <TextBlock Margin="25 -5 0 0"
                           FontSize="14"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Foreground="WhiteSmoke"
                           Text="Список исполнителей задачи:"/>
                <ListView Height="110"
                          Margin="20 0"
                          ItemsSource="{Binding ProductionTaskPerformers}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="22"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" 
                                                BorderBrush="DimGray"
                                                BorderThickness="2"
                                                CornerRadius="2">
                                    <Image Width="20"
                                           Height="20"
                                           Source="{Binding EmployeePhoto.FilePath,
                                        FallbackValue={StaticResource DefaultContactImage},
                                        TargetNullValue={StaticResource DefaultContactImage}}"
                                           Stretch="UniformToFill"/>
                                </Border>
                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="280"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Grid.Row="1"
                                                           Padding="10, 0"
                                                           FontFamily="Futura Now"
                                                           FontSize="12"
                                                           HorizontalAlignment="Left"
                                                           Text="Должность: "/>
                                        <TextBlock Padding="10, 0"
                                                           FontFamily="Futura Now"
                                                           FontSize="12"
                                                           HorizontalAlignment="Left"
                                                           Text="Фамилия, имя, отчество"/>
                                        <TextBlock Margin="0 5 0 0"
                                                           Padding="10, 0"
                                                           FontFamily="Futura Now"
                                                           FontSize="12"
                                                           HorizontalAlignment="Left"
                                                           Text="Контактный телефон: "/>
                                        <TextBlock Padding="10, 0"
                                                           FontFamily="Futura Now"
                                                           FontSize="12"
                                                           HorizontalAlignment="Left"
                                                           Text="Адрес электронной почты: "/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Grid.Row="1"
                                                           Padding="10, 0"
                                                           FontFamily="Futura Now"
                                                           FontSize="12"
                                                           HorizontalAlignment="Left"
                                                           Text="{Binding Position}"/>
                                        <TextBlock Padding="10, 0"
                                                           FontFamily="Futura Now"
                                                           FontSize="12"
                                                           FontWeight="Bold"
                                                           HorizontalAlignment="Left"
                                                           Text="{Binding EmployeeFullName}"/>
                                        <TextBlock Margin="0 5 0 0"
                                                           Padding="10, 0"
                                                           FontFamily="Futura Now"
                                                           FontSize="12"
                                                           HorizontalAlignment="Left"
                                                           Text="{Binding EmployeePhone}"/>
                                        <TextBlock Padding="10, 0"
                                                           FontFamily="Futura Now"
                                                           FontSize="12"
                                                           HorizontalAlignment="Left"
                                                           Text="{Binding EmployeeEmail}"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Grid>
                    <Button Style="{StaticResource Buttons}"
                            Height="40"
                            Padding="0"
                            Margin="20 5 0 0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                        Command="{Binding IOpenContractorCompanyListWindow}">
                        <TextBlock x:Name="ButtonRemovePerformarce"
                                   TextAlignment="Center"
                                   Visibility="Visible">Удалить<LineBreak/> исполнителя</TextBlock>
                    </Button>
                    <Button Style="{StaticResource Buttons}"
                            Height="40"
                            Padding="0"
                            Margin="0 5 20 0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                        Command="{Binding IOpenListPerformers}">
                    <TextBlock x:Name="ButtonAddPerformarce"
                                   TextAlignment="Center"
                                   Visibility="Visible">Добавить <LineBreak/> исполнителя</TextBlock>
                </Button>
                </Grid>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="4"
              Margin="0 0 0 20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Foreground="White"
                           Margin="20 0"
                           FontSize="14"
                           FontWeight="Bold"
                           Text="Файлы приложенные к задаче: "/>
                <ListView Grid.Row="1"
                          x:Name="FileList"
                          Margin="20 0 20 10"
                          ItemsSource="{Binding ProductionTaskFiles}"
                          SelectedItem="{Binding SelectedProductionTaskFile}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Style="{StaticResource AdminDocumentTextblock}" Text="{Binding ProductionTaskFileName}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button Grid.Row="2" 
                        Style="{StaticResource Buttons}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Height="35"
                        Padding="5 5"
                        Margin="20 0"
                        Command="{Binding IDeleteProductionTaskFile}">
                    <TextBlock TextAlignment="Center">Удалить файл</TextBlock>
                </Button>
                <Button Grid.Row="2" 
                        Style="{StaticResource Buttons}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Padding="5 5"
                        Margin="20 0"
                        Height="35"
                        Command="{Binding IBrowseProductionTaskFile}">
                    <TextBlock TextAlignment="Center">Добавить файл</TextBlock>
                </Button>
            </Grid>
        </Grid>
        <Grid Grid.Row="5">
            <Button Content="Комментарии к задаче" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Style="{StaticResource Buttons}"
                    Padding="10 5"
                    Margin="20 5"
                    FontFamily="Futura Now" 
                    FontSize="14"
                    FontWeight="Bold"
                    Command="{Binding IShowComment}"/>
            <Button x:Name="SendDocument"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Style="{StaticResource Buttons}"
                    Padding="25 5"
                    Margin="20 5"
                    FontFamily="Futura Now" 
                    FontSize="18"
                    FontWeight="Bold"
                    Command="{Binding ISendForExecution}">
                <TextBlock TextAlignment="Center"> Направить на <LineBreak/>исполнение</TextBlock>
            </Button>
        </Grid>
        <Grid Grid.Row="7" Background="Black"/>
    </Grid>
</Window>