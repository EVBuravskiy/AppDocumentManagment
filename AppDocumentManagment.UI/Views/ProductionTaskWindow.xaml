<Window x:Class="AppDocumentManagment.UI.Views.ProductionTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppDocumentManagment.UI.Views"
        mc:Ignorable="d"
        Title="АИС Документооборот"  
        Height="900"
        Width="600"
        Icon="/Resources/Images/AppIcon.png" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0.778"/>
                <GradientStop Color="White" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="60px"/>
            <RowDefinition Height="200px"/>
            <RowDefinition Height="180px"/>
            <RowDefinition Height="180px"/>
            <RowDefinition Height="160px"/>
            <RowDefinition Height="60px"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF7D00FF" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Label Grid.Row="0" 
                   x:Name="GreetingLabel"
                   Content="Панель редактирования задачи" 
                   HorizontalAlignment="Left" 
                   Padding="20,0"
                   Style="{StaticResource TopPanelLabel}"
                   Foreground="WhiteSmoke"/>
            <Button x:Name="ExitBtn"
                    Content="Выйти"
                    HorizontalAlignment="Right"
                    Style="{StaticResource Buttons}"
                    Margin="10, 5"
                    Padding="20, 0"
                    Command="{Binding IExit}"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="100"/>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="TaskTitle" 
                             Grid.Row="0"
                             Style="{StaticResource ItemTitleBox}"
                             VerticalAlignment="Top"
                             FontSize="14"
                             Text="{Binding DocumentNumber}"
                             Background="WhiteSmoke"
                             SpellCheck.IsEnabled="True"
                             ToolTip="Введите наименование задачи..."
                             />
                    <Label IsHitTestVisible="False" 
                           Grid.Row="0"
                           Foreground="DimGray"
                           Content="Введите наименование задачи..."
                           VerticalAlignment="Top"
                           FontSize="14"
                           Visibility="{Binding Text.IsEmpty, ElementName=DocumentNumber, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="30 10"/>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Margin="27 0 0 0"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Text="Документ к заданию:"/>
                        <Button Grid.Column="1" 
                                Background="Transparent"
                                BorderThickness="0"
                                HorizontalContentAlignment="Left">
                            <TextBlock Text="Наименование документа"
                                       TextWrapping="Wrap"
                                       FontSize="14"
                                       FontWeight="Bold"/>
                        </Button>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="180"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Margin="27 0 0 0"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Text="Введите или выберите дату срока выполнения задания:"/>
                        <DatePicker Grid.Column="1"
                                    x:Name="DocumentDate"
                                    Background="White"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    BorderBrush="Transparent"
                                    FontFamily="Arial"
                                    FontSize="13"
                                    FontWeight="DemiBold"
                                    HorizontalContentAlignment="Left"
                                    Margin="0 0,20,0"
                                    Padding="10 0"
                                    SelectedDateFormat="Short" IsDropDownOpen="False"
                                    SelectedDate="{Binding DocumentDate}"/>
                    </Grid>
                    <TextBox x:Name="DocumentTitle" 
                             Grid.Row="3"
                             Style="{StaticResource ItemTitleBox}"
                             VerticalAlignment="Top"
                             FontSize="14"
                             Text="{Binding DocumentTitle}"
                             Background="WhiteSmoke"
                             SpellCheck.IsEnabled="True"
                             TextWrapping="Wrap"
                             Height="80"
                             ToolTip="Введите описание задачи"
                             />
                    <Label IsHitTestVisible="False" 
                           Grid.Row="3"
                           Foreground="DimGray"
                           Content="Введите описание задачи..."
                           VerticalAlignment="Center"
                           FontSize="14"
                           Visibility="{Binding Text.IsEmpty, ElementName=DocumentTitle, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="30 10"/>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <StackPanel Orientation="Vertical">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="180"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="SubTask" 
                             Grid.Column="0"
                             Style="{StaticResource ItemTitleBox}"
                             VerticalAlignment="Top"
                             FontSize="14"
                             Text="{Binding DocumentTitle}"
                             Background="WhiteSmoke"
                             SpellCheck.IsEnabled="True"
                             TextWrapping="Wrap"
                             ToolTip="Введите описание задачи"
                             />
                <Label IsHitTestVisible="False" 
                           Grid.Column="0"
                           Foreground="DimGray"
                           Content="Введите подзадачу..."
                           VerticalAlignment="Top"
                           FontSize="14"
                           Visibility="{Binding Text.IsEmpty, ElementName=SubTask, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="30,10,30,0"/>
                <Grid Grid.Column="1">
                    <Button Style="{StaticResource Buttons}"
                            Height="40"
                            Width="150"
                            Padding="0"
                            Margin="0 0 20 0"
                            HorizontalAlignment="Right"
                            Command="{Binding IOpenContractorCompanyListWindow}">
                        <Grid>
                            <TextBlock x:Name="ButtonAddSubTask"
                                   TextAlignment="Center"
                                   Visibility="Visible">Добавить <LineBreak/> подзадачу</TextBlock>
                        </Grid>
                    </Button>
                </Grid>
            </Grid>
                <Grid>
                    <ListView Margin="20 0" 
                              MinHeight="120">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="Наименование подзадачи"
                                           TextWrapping="Wrap"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="3">
            <StackPanel Orientation="Vertical">
                <TextBlock Margin="25 -5 0 0"
                           FontSize="14"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Foreground="WhiteSmoke"
                           Text="Список исполнителей задачи:"/>
                <ListView MinHeight="110"
                          Margin="20 0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button Style="{StaticResource Buttons}"
                            Height="40"
                            Width="150"
                            Padding="0"
                            Margin="0 5 20 0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                        Command="{Binding IOpenContractorCompanyListWindow}">
                    <TextBlock x:Name="ButtonAddPerformarce"
                                   TextAlignment="Center"
                                   Visibility="Visible">Добавить <LineBreak/> исполнителя</TextBlock>
            </Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="4"
              Margin="0 0 0 20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Foreground="White"
                           Margin="20 -25"
                           FontSize="14"
                           FontWeight="Bold"
                           Text="Файлы приложенные к задаче: "/>
                <ListView Grid.Row="1"
                          x:Name="FileList"
                          Margin="20 -25 20 10"
                          ItemsSource="{Binding DocumentFiles}"
                          SelectedItem="{Binding SelectedDocumentFile}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Style="{StaticResource AdminDocumentTextblock}" Text="{Binding ExternalFileName}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button Grid.Row="2" 
                        Style="{StaticResource Buttons}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Height="35"
                        Padding="5 5"
                        Margin="20 0"
                        Command="{Binding IDeleteDocumentFile}">
                    <TextBlock TextAlignment="Center">Удалить файл</TextBlock>
                </Button>
                <Button Grid.Row="2" 
                        Style="{StaticResource Buttons}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Padding="5 5"
                        Margin="20 0"
                        Height="35"
                        Command="{Binding IBrowseDocumentFiles}">
                    <TextBlock TextAlignment="Center">Добавить файл</TextBlock>
                </Button>
            </Grid>
        </Grid>
        <Grid Grid.Row="5">
            <Button Content="Комментарии к задаче" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Style="{StaticResource Buttons}"
                    Padding="10 5"
                    Margin="20 5"
                    FontFamily="Arial" 
                    FontSize="14"
                    FontWeight="Bold"
                    Command="{Binding IRemoveDocument}"/>
            <Button x:Name="SendDocument"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Style="{StaticResource Buttons}"
                    Padding="25 5"
                    Margin="20 5"
                    FontFamily="Arial" 
                    FontSize="18"
                    FontWeight="Bold"
                    Command="{Binding ISendToExaminingPerson}">
                <TextBlock TextAlignment="Center"> Направить на <LineBreak/>исполнение</TextBlock>
            </Button>
        </Grid>
        <Grid Grid.Row="7" Background="Black"/>
    </Grid>
</Window>