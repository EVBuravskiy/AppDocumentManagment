<Window x:Class="AppDocumentManagment.UI.Views.AdminPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppDocumentManagment.UI.Views"
        mc:Ignorable="d"
        Title="АИС Документооборот"  
        MinHeight="450" 
        MinWidth="1300" 
        Height="900"
        Width="1300"
        Icon="/Resources/Images/AppIcon.png" WindowStartupLocation="CenterScreen" WindowState="Maximized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60px"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40px"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF7D00FF" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Label x:Name="GreetingLabel"
                   Content="Панель администратора" 
                   HorizontalAlignment="Left" 
                   Style="{StaticResource TopPanelLabel}"
                   Padding="20,0"/>
            <Label x:Name="CurrentUserName" 
                   Content="Сотрудник"
                   HorizontalAlignment="Right"
                   Style="{StaticResource TopPanelLabel}"
                   Margin="100, 0"/>
            <Button x:Name="ExitBtn"
                    Content="Выйти"
                    HorizontalAlignment="Right"
                    Style="{StaticResource Buttons}"
                    Margin="10, 5"
                    Padding="10, 0"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="230"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" 
                        Orientation="Vertical">
                <StackPanel.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="1"/>
                        <GradientStop Color="#FF7F00FF" Offset="0"/>
                    </LinearGradientBrush>
                </StackPanel.Background>
                <Button x:Name="PersonnelBtn"
                        Content="Учет кадров"    
                        Style="{StaticResource Buttons}"
                        Padding="10"
                        Margin="5"
                        Command="{Binding IOpenPersonellRecordsWindow}"/>
                <Button x:Name="DocumentBtn"
                        Content="Учет документов"    
                        Style="{StaticResource Buttons}"
                        Padding="10"
                        Margin="5"
                        Command="{Binding IOpenDocumentRegistrationWindow}"/>
                <Button x:Name="TasksBtn"
                        Style="{StaticResource Buttons}"
                        Padding="10"
                        Margin="5"
                        Command="{Binding IOpenManagerPanelWindow}">
                    <TextBlock TextAlignment="Center">Поступившие документы<LineBreak/> учет задач</TextBlock>
                </Button>
                <Button x:Name="RegistrationBtn"
                        Style="{StaticResource Buttons}"
                        Padding="10"
                        Margin="5"
                        Command="{Binding IOpenUserRegistrationWindow}">
                    <TextBlock TextAlignment="Center">Регистрация<LineBreak/> пользователей</TextBlock>
                </Button>
            </StackPanel>
            <Grid Grid.Column="1">
                <Image Source="/Resources/Images/StartPageImage.png" 
                       VerticalAlignment="Top" 
                       HorizontalAlignment="Center"
                       Stretch="UniformToFill" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
            </Grid>
            <Grid Grid.Column="2">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="1"/>
                        <GradientStop Color="White" Offset="0"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Calendar HorizontalAlignment="Center" 
                          Margin="10" 
                          VerticalAlignment="Top"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="2" Background="Black"/>

    </Grid>
</Window>
