<Window x:Class="AppDocumentManagment.UI.Views.ProductionTaskShowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppDocumentManagment.UI.Views"
        mc:Ignorable="d"
        Title="АИС Документооборот"  
        Height="900"
        Width="600"
        Icon="/Resources/Images/AppIcon.png" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0.778"/>
                <GradientStop Color="White" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="60px"/>
            <RowDefinition Height="200px"/>
            <RowDefinition Height="180px"/>
            <RowDefinition Height="180px"/>
            <RowDefinition Height="160px"/>
            <RowDefinition Height="60px"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF7D00FF" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Label Grid.Row="0" 
                   x:Name="GreetingLabel"
                   Content="Панель задачи" 
                   HorizontalAlignment="Left" 
                   Padding="20,0"
                   Style="{StaticResource TopPanelLabel}"
                   Foreground="WhiteSmoke"/>
            <Button x:Name="ExitBtn"
                    Content="Выйти"
                    HorizontalAlignment="Right"
                    Style="{StaticResource Buttons}"
                    Margin="10, 5"
                    Padding="20, 0"
                    Command="{Binding IExit}"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="100"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               FontFamily="Futura Now"
                               Margin="27 0 0 0"
                               FontSize="22"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"
                               Text="{Binding ProductionTaskTitle}"/>
                    <Grid Grid.Row="1" x:Name="DocumentInfo" Visibility="Visible">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Margin="27 0 0 0"
                                   FontFamily="Futura Now"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Text="Документ к заданию:"/>
                        <Button x:Name="ExternalDocumentBtn"
                                Visibility="Visible"
                                Grid.Column="1" 
                                Background="Transparent"
                                BorderThickness="0"
                                HorizontalContentAlignment="Left"
                                Padding="20 0"
                                Command="{Binding IOpenExternalDocumentWindow}">
                            <TextBlock Text="{Binding DocumentTitle}"
                                       TextWrapping="Wrap"
                                       FontSize="14"
                                       FontWeight="Bold"/>
                        </Button>
                        <Button x:Name="InternalDocumentBtn"
                                Visibility="Hidden"
                                Grid.Column="1" 
                                Background="Transparent"
                                BorderThickness="0"
                                HorizontalContentAlignment="Left"
                                Padding="20 0"
                                Command="{Binding IOpenInternalDocumentWindow}">
                            <TextBlock Text="{Binding DocumentTitle}"
                                       TextWrapping="Wrap"
                                       FontSize="14"
                                       FontWeight="Bold"/>
                        </Button>

                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Margin="27 0 0 0"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Text="Срок выполнения:"/>
                        <TextBlock Grid.Column="1"
                                   Margin="0 0 0 0"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center"
                                   Text="{Binding ProductionTaskDueDate, Converter={StaticResource DateConverter}}"/>
                        <TextBlock x:Name="ImportantTask"
                                   Visibility="Visible"
                                   Grid.Column="2"
                                   Margin="0 0 20 0"
                                   FontSize="22"
                                   FontFamily="Impact"
                                   Foreground="DarkRed"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center"
                                   Text="{Binding IsImportance, Converter={StaticResource ImportanceConverter}}"/>
                    </Grid>
                    <StackPanel Orientation="Vertical" Grid.Row="3">
                        <TextBlock Grid.Row="3"
                                   Margin="27 0 0 0"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Text="Описание задачи:"/>
                        <TextBlock Grid.Row="3"
                                   Margin="27 0 10 0"
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   TextWrapping="Wrap"
                                   Text="{Binding ProductionTaskDescription}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <StackPanel Orientation="Vertical">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="180"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Margin="27 0 0 5"
                               FontSize="14"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Text="Подзадачи текущей задачи:"/>
                    <TextBlock Grid.Column="1"
                               Margin="0 0 20 5"
                               FontSize="14"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               Text="Выполнено"/>
                </Grid>
                <Grid>
                    <ListView Margin="20 0" 
                              Height="110"
                              ItemsSource="{Binding ProductionSubTasks}"
                              SelectedItem="{Binding SelectedProductionSubTask}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="510">
                                    <TextBlock Text="{Binding ProductionSubTaskDescription}"
                                               Style="{StaticResource AdminDocumentTextblock}"
                                               Padding="10 0"
                                               TextWrapping="Wrap"
                                               HorizontalAlignment="Left"/>
                                    <CheckBox IsChecked="{Binding IsDone, Mode=TwoWay}"
                                              HorizontalAlignment="Right"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
                <Button Grid.Row="2" 
                        Style="{StaticResource Buttons}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Padding="5 5"
                        Margin="20 5 20 0"
                        Height="40"
                        Command="{Binding IUpdateSubTasks}">
                    <TextBlock TextAlignment="Center">Подтвердить статус<LineBreak/>выполнения подзадачи</TextBlock>
                </Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="3">
            <StackPanel Orientation="Vertical">
                <TextBlock Margin="25 -5 0 0"
                           FontSize="14"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Foreground="WhiteSmoke"
                           Text="Список исполнителей задачи:"/>
                <ListView Height="110"
                          Margin="20 0"
                          ItemsSource="{Binding ProductionTaskPerformers}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" 
                                        BorderBrush="DimGray"
                                        BorderThickness="2"
                                        CornerRadius="2"
                                        Width="40"
                                        Height="40">
                                    <Image Width="40"
                                           Height="40"
                                           Source="{Binding EmployeePhoto.FilePath,
                                        FallbackValue={StaticResource DefaultContactImage},
                                        TargetNullValue={StaticResource DefaultContactImage}}"
                                           Stretch="UniformToFill"/>
                                </Border>
                                <Grid Grid.Column="1">
                                    <StackPanel>
                                        <TextBlock Padding="10, 0"
                                                   FontFamily="Arial"
                                                   FontSize="10"
                                                   HorizontalAlignment="Left"
                                                   Text="{Binding Position}"/>
                                        <TextBlock Padding="10, 0"
                                                   FontFamily="Arial"
                                                   FontSize="12"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Left"
                                                   Text="{Binding EmployeeFullName}"/>
                                        <TextBlock Margin="0 5 0 0"
                                                   Padding="10, 0"
                                                   FontFamily="Arial"
                                                   FontSize="10"
                                                   HorizontalAlignment="Left"
                                                   Text="{Binding EmployeePhone}"/>
                                        <TextBlock Padding="10, 0"
                                                   FontFamily="Arial"
                                                   FontSize="10"
                                                   HorizontalAlignment="Left"
                                                   Text="{Binding EmployeeEmail}"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="4"
              Margin="0 0 0 20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Foreground="White"
                           Margin="20 -25"
                           FontSize="14"
                           FontWeight="Bold"
                           Text="Файлы приложенные к задаче: "/>
                <ListView Grid.Row="1"
                          x:Name="FileList"
                          Margin="20 -25 20 10"
                          ItemsSource="{Binding ProductionTaskFiles}"
                          SelectedItem="{Binding SelectedProductionTaskFile}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Style="{StaticResource AdminDocumentTextblock}" Text="{Binding ProductionTaskFileName}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button Grid.Row="2" 
                        Style="{StaticResource Buttons}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Height="35"
                        Padding="5 5"
                        Margin="20 0"
                        Command="{Binding ILoadProductionTaskFiles}">
                    <TextBlock TextAlignment="Center">Скачать файлы</TextBlock>
                </Button>
                <Button Grid.Row="2" 
                        Style="{StaticResource Buttons}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Padding="5 5"
                        Margin="20 0"
                        Height="35"
                        Command="{Binding IBrowseProductionTaskFile}">
                    <TextBlock TextAlignment="Center">Добавить файл</TextBlock>
                </Button>
            </Grid>
        </Grid>
        <Grid Grid.Row="5">
            <Button Content="Комментарии к задаче" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Style="{StaticResource Buttons}"
                    Padding="10 5"
                    Margin="20 5"
                    FontFamily="Futura Now"
                    FontSize="14"
                    FontWeight="Bold"
                    Command="{Binding IOpenProductionTaskCommentWindow}"/>
            <Button x:Name="SendDocument"
                    Visibility="Visible"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Style="{StaticResource Buttons}"
                    Padding="25 5"
                    Margin="20 5"
                    FontFamily="Futura Now"
                    FontSize="18"
                    FontWeight="Bold"
                    Command="{Binding ISendToCreatorEmployee}">
                <TextBlock TextAlignment="Center"> Направить на <LineBreak/>проверку</TextBlock>
            </Button>
        </Grid>
        <Grid Grid.Row="7" Background="Black"/>
    </Grid>
</Window>