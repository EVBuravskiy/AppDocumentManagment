<Window x:Class="AppDocumentManagment.UI.Views.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppDocumentManagment.UI.Views"
        xmlns:uc="clr-namespace:AppDocumentManagment.UI.Utilities"
        mc:Ignorable="d"
        Title="АИС Документооборот"  
        Height="900"
        Width="600"
        Icon="/Resources/Images/AppIcon.png" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <uc:EmployeeRoleConverter x:Name="ToIntConverter" x:Key="ToIntConveter"/>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0.778"/>
                <GradientStop Color="White" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="60px"/>
            <RowDefinition Height="150px"/>
            <RowDefinition Height="50px"/>
            <RowDefinition Height="50px"/>
            <RowDefinition Height="50px"/>
            <RowDefinition Height="50px"/>
            <RowDefinition Height="160px"/>
            <RowDefinition Height="160px"/>
            <RowDefinition Height="60px"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF7D00FF" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Label Grid.Row="0" 
                   x:Name="GreetingLabel"
                   Content="Панель редактирования данных сотрудника" 
                   HorizontalAlignment="Left" 
                   Padding="20,0"
                   Style="{StaticResource TopPanelLabel}"
                   Foreground="WhiteSmoke"/>
            <Button x:Name="ExitBtn"
                    Content="Выйти"
                    HorizontalAlignment="Right"
                    Style="{StaticResource Buttons}"
                    Margin="10, 5"
                    Padding="10, 0"
                    Command="{Binding IExit}"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130px"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Image Margin="10"
                           Height="120" Width="110"
                           Source="{Binding EmployeeImagePath,
                        FallbackValue={StaticResource DefaultContactImage},
                        TargetNullValue={StaticResource DefaultContactImage}}"
                           Stretch="UniformToFill"/>
                    <Button Style="{StaticResource Buttons}" 
                            Command="{Binding IBrowseEmployeeImage}"
                            VerticalAlignment="Bottom" 
                            HorizontalAlignment="Right"
                            Foreground="Black"
                            FontWeight="DemiBold"
                            Width="110"
                            Height="30"
                            Padding="10 5"
                            Content="Фотография">
                    </Button>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="EmployeeLastName" 
                             Grid.Row="0"
                             Style="{StaticResource ItemTitleBox}"
                             VerticalAlignment="Top"
                             FontSize="14"
                             Text="{Binding EmployeeLastName}"
                             Background="WhiteSmoke"
                             SpellCheck.IsEnabled="True"
                             ToolTip="Введите фамилию сотрудника. Фамилия может содержать только буквы русского алфавита и дефис"
                             />
                    <Label IsHitTestVisible="False" 
                           Grid.Row="0"
                           Foreground="DimGray"
                           Content="Введите фамилию сотрудника..."
                           VerticalAlignment="Top"
                           FontSize="14"
                           Visibility="{Binding Text.IsEmpty, ElementName=EmployeeLastName, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="30 10"/>
                    <TextBox x:Name="EmployeeFirstName"
                             Grid.Row="1"
                             Style="{StaticResource ItemTitleBox}"
                             VerticalAlignment="Top"
                             FontSize="14"
                             Text="{Binding EmployeeFirstName}"
                             Background="WhiteSmoke"
                             SpellCheck.IsEnabled="True"/>
                    <Label IsHitTestVisible="False"
                           Grid.Row="1"
                           Foreground="DimGray"
                           Content="Введите имя сотрудника..."
                           VerticalAlignment="Top"
                           FontSize="14"
                           Visibility="{Binding Text.IsEmpty, ElementName=EmployeeFirstName, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="30 10"
                           ToolTip="Введите имя сотрудника. Имя может содержать только буквы русского алфавита и дефис"
                           />
                    <TextBox x:Name="EmployeeMiddleName" 
                             Grid.Row="2"
                             Style="{StaticResource ItemTitleBox}"
                             VerticalAlignment="Top"
                             FontSize="14"
                             Text="{Binding EmployeeMiddleName}"
                             Background="WhiteSmoke"
                             SpellCheck.IsEnabled="True"
                             ToolTip="При наличии введите отчество сотрудника. Отчество может содержать только буквы русского алфавита и дефис"
                             />
                    <Label IsHitTestVisible="False" 
                           Grid.Row="2"
                           Foreground="DimGray"
                           Content="При наличии введите отчество сотрудника..."
                           VerticalAlignment="Top"
                           FontSize="14"
                           Visibility="{Binding Text.IsEmpty, ElementName=EmployeeMiddleName, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="30 10"/>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <TextBox x:Name="EmployeePosition" 
                     Grid.Row="1"
                     Style="{StaticResource ItemTitleBox}"
                     VerticalAlignment="Top"
                     FontSize="14"
                     Text="{Binding EmployeePosition}"
                     Background="WhiteSmoke"
                     SpellCheck.IsEnabled="True"/>
            <Label IsHitTestVisible="False" 
                   Grid.Row="1"
                   Foreground="DimGray"
                   Content="Введите должность сотрудника..."
                   VerticalAlignment="Top"
                   FontSize="14"
                   Visibility="{Binding Text.IsEmpty, ElementName=EmployeePosition, Converter={StaticResource BooleanToVisibilityConverter}}"
                   Margin="30 10"
                   ToolTip="Введите должность сотрудника"
                   />
        </Grid>
        <Grid Grid.Row="3">
            <Label Content="Контактная информация"
                   Style="{StaticResource TopPanelLabel}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="18"/>
        </Grid>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0"
                   Content="Контактный номер телефона: "
                   Style="{StaticResource TopPanelLabel}"
                   Margin="20 0 0 0"/>
            <Grid Grid.Column="1">
                <TextBox x:Name="EmployeePhone" 
                             Grid.Row="0"
                             Style="{StaticResource ItemTitleBox}"
                             VerticalAlignment="Top"
                             FontSize="14"
                             Text="{Binding EmployeePhone}"
                             Background="WhiteSmoke"
                             SpellCheck.IsEnabled="True"/>
                <Label IsHitTestVisible="False" 
                           Grid.Row="0"
                           Foreground="DimGray"
                           Content="Введите номер телефона сотрудника..."
                           VerticalAlignment="Top"
                           FontSize="14"
                           Visibility="{Binding Text.IsEmpty, ElementName=EmployeePhone, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="30 10"
                       ToolTip="Введите номер телефона сотрудника. Номер телефона должен состоять из 11 цифр"
                       />
            </Grid>
        </Grid>
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0"
                   Content="Email сотрудника: "
                   Style="{StaticResource TopPanelLabel}"
                   Margin="20 0 0 0"/>
            <Grid Grid.Column="1">
                <TextBox x:Name="EmployeeEmail" 
                             Grid.Row="0"
                             Style="{StaticResource ItemTitleBox}"
                             VerticalAlignment="Top"
                             FontSize="14"
                             Text="{Binding EmployeeEmail}"
                             Background="WhiteSmoke"
                             SpellCheck.IsEnabled="True"
                         ToolTip="Введите адрес электронной почты сотрудника. Адрес электронной почты может содержать буквы латинского алфавита, цифры, тире, нижнее подчеркивание"
                         />
                <Label IsHitTestVisible="False" 
                           Grid.Row="0"
                           Foreground="DimGray"
                           Content="Введите Email сотрудника..."
                           VerticalAlignment="Top"
                           FontSize="14"
                           Visibility="{Binding Text.IsEmpty, ElementName=EmployeeEmail, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="30 10"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="6">
            <StackPanel Orientation="Vertical">
                <Label Content="Выберите тип занимаемой должности"
                       FontFamily="Arial"
                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="WhiteSmoke"
                       Margin="20, 5"/>
                <ComboBox Height="30"
                          Margin="20, 0"
                          FontFamily="Arial"
                          FontSize="14"
                          FontWeight="DemiBold"
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          ItemsSource="{Binding EmployeeRoles}"
                          SelectedIndex="{Binding SelectedEmployeeIndex}"
                          SelectedItem="{Binding SelectedEmployeeRole}"/>
                <Label Content="Выберите отдел"
                       FontFamily="Arial"
                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="WhiteSmoke"
                       Margin="20, 5"/>
                <ComboBox Height="30"
                          Margin="20, 0"
                          FontFamily="Arial"
                          FontSize="14"
                          FontWeight="DemiBold"
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          ItemsSource="{Binding DepartmentTitleList}"
                          SelectedIndex="{Binding SelectedDepartmentIndex}"
                          SelectedItem="{Binding SelectedDepartment}"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="7">
            <TextBox x:Name="EmployeeInformation" 
                     Grid.Row="1"
                     Style="{StaticResource ItemTitleBox}"
                     VerticalAlignment="Top"
                     FontSize="14"
                     Text="{Binding EmployeeInformation}"
                     Background="WhiteSmoke"
                     SpellCheck.IsEnabled="True"
                     Height="130"/>
            <Label IsHitTestVisible="False" 
                   Grid.Row="1"
                   Foreground="DimGray"
                   Content="Введите дополнительную необходимую информацию о сотруднике..."
                   VerticalAlignment="Top"
                   FontSize="14"
                   Visibility="{Binding Text.IsEmpty, ElementName=EmployeeInformation, Converter={StaticResource BooleanToVisibilityConverter}}"
                   Margin="30 10"
                   VerticalContentAlignment="Center"
                   Height="130"/>
        </Grid>
        <Grid Grid.Row="8">
            <Button Content="{Binding RemoveBtnTitle}" 
                    HorizontalAlignment="Left"
                    Style="{StaticResource Buttons}"
                    Padding="10 5"
                    Margin="20 5"
                    FontFamily="Arial" 
                    FontSize="14"
                    FontWeight="Bold"
                    Command="{Binding IRemove}"/>
            <Button Content="Сохранить изменения" 
                    HorizontalAlignment="Right"
                    Style="{StaticResource Buttons}"
                    Padding="10, 5"
                    Margin="20 5"
                    FontFamily="Arial" 
                    FontSize="14"
                    FontWeight="Bold"
                    Command="{Binding ISave}"/>
        </Grid>
    </Grid>
</Window>
