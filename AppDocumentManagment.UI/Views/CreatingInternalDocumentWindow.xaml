<Window x:Class="AppDocumentManagment.UI.Views.CreatingInternalDocumentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppDocumentManagment.UI.Views"
        mc:Ignorable="d"
        Title="АИС Документооборот"  
        Height="900"
        Width="600"
        Icon="/Resources/Images/AppIcon.png" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0.778"/>
                <GradientStop Color="White" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="60px"/>
            <RowDefinition Height="80px"/>
            <RowDefinition Height="380px"/>
            <RowDefinition Height="200px"/>
            <RowDefinition Height="120px"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF7D00FF" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Label Grid.Row="0" 
                   x:Name="GreetingLabel"
                   Content="Панель создания внутреннего документа" 
                   HorizontalAlignment="Left" 
                   Padding="20,0"
                   Style="{StaticResource TopPanelLabel}"
                   Foreground="WhiteSmoke"/>
            <Button x:Name="ExitBtn"
                    Content="Выйти"
                    HorizontalAlignment="Right"
                    Style="{StaticResource Buttons}"
                    Margin="10, 5"
                    Padding="20, 0"
                    Command="{Binding IExit}"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Label Style="{StaticResource TopPanelLabel}"
                               HorizontalAlignment="Left"
                               Foreground="Black"
                               Margin="20 0"
                               Content="Выберите тип документа"/>
                        <ComboBox HorizontalAlignment="Right"
                                  Margin="25 0"
                                  Width="300"
                                  Height="30"
                                  FontFamily="Arial"
                                  FontSize="14"
                                  FontWeight="DemiBold"
                                  HorizontalContentAlignment="Center"
                                  VerticalContentAlignment="Center"
                                  Background="WhiteSmoke"
                                  ItemsSource="{Binding InternalDocumentTypes}"
                                  SelectedIndex="{Binding SelectedInternalDocumentTypeIndex}"
                                  SelectedItem="{Binding SelectedInternalDocumentType}"/>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Label Style="{StaticResource TopPanelLabel}"
                               HorizontalAlignment="Left"
                               Foreground="Black"
                               Margin="20 0"
                               Content="Дата документа: "/>
                        <Label Style="{StaticResource TopPanelLabel}"
                               HorizontalAlignment="Center"
                               Foreground="Black"
                               Margin="25 0"
                               Content="{Binding InternalDocumentDate, Converter={StaticResource DateConverter}}"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="2" Margin="20 0">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Наименование документа: "
                           Style="{StaticResource TopPanelLabel}"
                           Foreground="Black"/>
                    <Grid>
                        <TextBox x:Name="InternalDocumentTitle" 
                                 Style="{StaticResource ItemTitleBox}"
                                 VerticalAlignment="Top"
                                 FontSize="14"
                                 Text="{Binding InternalDocumentTitle}"
                                 Background="WhiteSmoke"
                                 Margin="10 0 0 0"
                                 Width="330"
                                 Height="50"
                                 SpellCheck.IsEnabled="True"
                                 TextWrapping="Wrap"/>
                        <Label IsHitTestVisible="False" 
                           Grid.Row="3"
                           Foreground="DimGray"
                           Content="Введите наименование документа..."
                           VerticalAlignment="Top"
                           FontSize="14"
                           Visibility="{Binding Text.IsEmpty, ElementName=InternalDocumentTitle, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="20 10 "/>
                    </Grid>
                </StackPanel>
                <Label Content="Cодержание документа:"
                       Style="{StaticResource TopPanelLabel}"
                       Foreground="Black"/>
                <Grid>
                    <TextBox x:Name="InternalDocumentContent" 
                             Style="{StaticResource ItemTitleBox}"
                             VerticalAlignment="Center"
                             FontSize="14"
                             Text="{Binding InternalDocumentContent}"
                             Background="WhiteSmoke"
                             SpellCheck.IsEnabled="True"
                             Height="300"
                             TextWrapping="Wrap"
                             VerticalContentAlignment="Top" 
                             Margin="0"/>
                    <Label IsHitTestVisible="False" 
                           Foreground="DimGray"
                           Content="Введите содержание документа..."
                           VerticalAlignment="Top"
                           VerticalContentAlignment="Center"
                           FontSize="14"
                           Height="300"
                           Visibility="{Binding Text.IsEmpty, ElementName=InternalDocumentContent, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="10 0"/>
                </Grid>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="3"
              Margin="0 0 0 20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0"
                       Style="{StaticResource TopPanelLabel}"
                       Foreground="White"
                       Margin="20 0"
                       Content="Файлы приложения к документу: "/>
                <Button Grid.Row="2" 
                        Style="{StaticResource Buttons}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Padding="10 10"
                        Margin="20 0"
                        Command="{Binding IDeleteInternalDocumentFile}">
                    <TextBlock TextAlignment="Center">Удалить файл<LineBreak/> из документа</TextBlock>
                </Button>
                <Button Grid.Row="2" 
                        Style="{StaticResource Buttons}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Padding="10 10"
                        Margin="20 0"
                        Command="{Binding IBrowseInternalDocumentFiles}">
                    <TextBlock TextAlignment="Center">Добавить файл<LineBreak/> в документ</TextBlock>
                </Button>
                <ListView Grid.Row="1"
                          x:Name="FileList"
                          Margin="20 5 20 10"
                          ItemsSource="{Binding InternalDocumentFiles}"
                          SelectedItem="{Binding SelectedInternalDocumentFile}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Style="{StaticResource AdminDocumentTextblock}" Text="{Binding FileName}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>
        <Grid Grid.Row="4">
            <Button HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Style="{StaticResource Buttons}"
                    Padding="10 10"
                    Margin="20 5"
                    FontFamily="Arial" 
                    FontSize="14"
                    FontWeight="Bold"
                    Command="{Binding IRemoveInternalDocument}">
                <TextBlock TextAlignment="Center">Очистить введенные <LineBreak/> данные </TextBlock>
            </Button>
            <Button x:Name="RegisterOrUpdateBtn"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Style="{StaticResource Buttons}"
                    Padding="10, 10"
                    Margin="20 5"
                    FontFamily="Arial" 
                    FontSize="16"
                    FontWeight="Bold"
                    Command="{Binding ICreateTask}">
                <TextBlock TextAlignment="Center">Создать задачу</TextBlock>
            </Button>
            <Button x:Name="SendDocument"
                    HorizontalAlignment="Right"
                    Style="{StaticResource Buttons}"
                    Padding="25 5"
                    Margin="20 20"
                    FontFamily="Arial" 
                    FontSize="18"
                    FontWeight="Bold"
                    Height="80"
                    Command="{Binding ISendInternalDocument}">
                <TextBlock TextAlignment="Center"> Направить на <LineBreak/>рассмотрение <LineBreak/>руководителю</TextBlock>
            </Button>
        </Grid>
    </Grid>
</Window>